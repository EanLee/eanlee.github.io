---
import { getCollection } from "astro:content";
import SeriesLayout from "../../layouts/SeriesLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  // 取得 id 與 Astro.params 相同的
  const seriesNames = [
    ...new Set(
      posts
        .filter((post) => post.data.series)
        .map((post) => {
          // 取系列目錄名（倒數第 3 個 path segment），例：
          // "Software/series/build-automated-deploy/cicd_concept/index.md" → "build-automated-deploy"
          const segments = post.id.split('/');
          return segments[segments.length - 3].toLowerCase();
        })
    ),
  ];

  return seriesNames.map((seriesName) => {
    return {
      params: {
        slug: seriesName,
      },
    };
  });
}

const posts = await getCollection("blog");
const filteredPosts = posts
  .filter((post) => {
    const segments = post.id.split('/');
    const seriesDir = segments[segments.length - 3].toLowerCase();
    return post.data.series && seriesDir === Astro.params.slug;
  })
  .sort((a, b) => a.data.date.valueOf() - b.data.date.valueOf());

if (filteredPosts.length === 0) {
  return Astro.redirect('/404');
}

const seriesName = filteredPosts[0].data.series || '';

// 確定該系列文章所屬的 epic
let epicFilter = "software"; // 默認為軟體開發
let accentColor = "#4299e1"; // 默認藍色

// 檢查第一篇文章是否有 epic 字段
const firstPostEpic = filteredPosts[0].data.epic;
if (firstPostEpic) {
  epicFilter = firstPostEpic;
  
  // 根據 epic 設置顏色
  switch(epicFilter) {
    case "software":
      accentColor = "#4299e1"; // 藍色
      break;
    case "management":
      accentColor = "#38a169"; // 綠色
      break;
    case "reading":
      accentColor = "#ed8936"; // 橙色
      break;
    case "growth":
      accentColor = "#9f7aea"; // 紫色
      break;
    default:
      accentColor = "#4299e1"; // 默認藍色
  }
}
---

<SeriesLayout
  seriesName={Astro.params.slug}
  seriesTitle={seriesName}
  epicFilter={epicFilter}
  accentColor={accentColor}
  source={filteredPosts}
/>

<style>

  a {
    text-decoration: none;
  }

  .createDate {
    display: inline-block;
    font-size: 0.9rem;
    text-align: right;
    margin-right: 10px;
  }

  li {
    margin-top: 5px;
    margin-bottom: 3px;
  }
</style>
