---
import GeneralLayout from "../layouts/GeneralLayout.astro";
---

<GeneralLayout>
    <div class="error-container">
        <div class="error-content">
            <img src="/svg/18038_color.svg" alt="404" />
            
            <h1>頁面不存在</h1>
            
            <div class="error-message">
                <p class="sub-text">
                    因網站架構大幅調整，部分舊連結可能已失效，但所有文章內容都完整保留。
                </p>             
            </div>
            
            <div class="action-buttons">
                <a href="/" class="primary-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                        <polyline points="9,22 9,12 15,12 15,22"/>
                    </svg>
                    回到首頁
                </a>
                
                <a href="javascript:history.back()" class="secondary-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m12 19-7-7 7-7"/>
                        <path d="M19 12H5"/>
                    </svg>
                    返回上頁
                </a>
            </div>
        </div>
    </div>
</GeneralLayout>

<style>
    /* 覆蓋 GeneralLayout 的容器寬度限制 */
    :global(main) {
        width: 100% !important;
        max-width: 100% !important;
    }

    .error-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
        padding: var(--spacing-md) var(--spacing-xl);
        width: 100%;
        margin: 0;
    }

    .error-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        max-width: 600px;
        width: 100%;
        margin: 0 auto;
    }

    img {
        width: 160px;
        height: 160px;
        margin-bottom: var(--spacing-md);
    }

    h1 {
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-bold);
        margin: 0 0 var(--spacing-sm) 0;
        color: var(--text-primary);
    }

    .error-message {
        margin-bottom: var(--spacing-lg);
    }

    .main-text {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-medium);
        color: var(--text-primary);
        margin-bottom: var(--spacing-md);
    }

    .sub-text {
        font-size: var(--font-size-base);
        line-height: 1.6;
        color: var(--text-secondary);
        margin-bottom: var(--spacing-sm);
    }

    .action-buttons {
        display: flex;
        gap: var(--spacing-md);
        flex-wrap: wrap;
        justify-content: center;
    }

    /* Primary button (based on EpicLayout .view-more-link style) */
    .primary-button {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-sm);
        font-size: var(--font-size-base);
        font-weight: var(--font-weight-medium);
        color: var(--color-primary);
        text-decoration: none;
        padding: calc(var(--spacing-md) - var(--spacing-xs)) var(--spacing-lg);
        border: 1px solid var(--color-primary);
        border-radius: var(--radius-md);
        transition: all var(--transition-normal);
    }

    .primary-button:hover {
        background-color: var(--color-primary);
        color: white;
    }

    .primary-button:hover svg {
        color: white;
    }

    /* Secondary button (based on EpicLayout .read-more style) */
    .secondary-button {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-sm);
        font-size: calc(var(--font-size-base) - 0.05rem);
        font-weight: var(--font-weight-medium);
        color: var(--text-secondary);
        text-decoration: none;
        padding: calc(var(--spacing-md) - var(--spacing-xs)) var(--spacing-lg);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        transition: all var(--transition-normal);
    }

    .secondary-button:hover {
        color: var(--color-primary);
        border-color: var(--color-primary);
        opacity: 0.8;
    }

    .secondary-button:hover svg {
        color: var(--color-primary);
    }

    /* 大螢幕優化 */
    @media (min-width: 1400px) {
        .error-container {
            padding: var(--spacing-xl) var(--spacing-2xl);
        }

        .error-content {
            max-width: 700px;
        }
    }

    @media (max-width: 768px) {
        :global(main) {
            width: 100% !important;
            max-width: 100% !important;
        }

        .error-container {
            min-height: 40vh;
            padding: var(--spacing-sm) var(--spacing-md);
        }

        h1 {
            font-size: var(--font-size-3xl);
        }

        .error-message {
            font-size: var(--font-size-base);
        }

        .action-buttons {
            flex-direction: column;
            width: 100%;
        }

        .primary-button, .secondary-button {
            justify-content: center;
            width: 100%;
        }
    }

    @media (max-width: 480px) {
        .error-container {
            min-height: 35vh;
            padding: var(--spacing-xs) var(--spacing-sm);
        }

        img {
            width: 120px;
            height: 120px;
            margin-bottom: var(--spacing-sm);
        }

        h1 {
            font-size: var(--font-size-2xl);
            margin-bottom: var(--spacing-xs);
        }

        .error-message {
            font-size: var(--font-size-sm);
            margin-bottom: var(--spacing-md);
        }
    }
</style>