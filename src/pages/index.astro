---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import Sidebar from "../components/sidebar.astro";
import EpicBlock from "../components/EpicBlock.astro";

// 獲取所有文章
const allPosts = await getCollection("blog");

// 按日期排序
const sortedPosts = allPosts.sort((a, b) =>
    b.data.date.valueOf() - a.data.date.valueOf()
);

// 獲取軟體開發類別的文章
const softwarePosts = sortedPosts
    .filter(post => {
        // If post has epic field, use it for categorization
        if ('epic' in post.data) {
            return post.data.epic === "software";
        }
        // Default to software development if no epic or categories
        return true;
    })
    .slice(0, 5);

// 獲取管理經驗類別的文章
const managementPosts = sortedPosts
    .filter(post => {
        // If post has epic field, use it for categorization
        if ('epic' in post.data) {
            return post.data.epic === "management";
        }
        // Default to management experience if no epic
        return false;
    })
    .slice(0, 5);

// 獲取閱讀心得類別的文章
const readingPosts = sortedPosts
    .filter(post => {
        if ('epic' in post.data) {
            return post.data.epic === "reading";
        }
        return false;
    })
    .slice(0, 5);

// 獲取個人成長類別的文章
const growthPosts = sortedPosts
    .filter(post => {
        // If post has epic field, use it for categorization
        if ('epic' in post.data) {
            return post.data.epic === "growth";
        }
        // Default to personal growth if no epic
        return false;
    })
    .slice(0, 5);

// 為SEO準備關鍵字
const keywords = ["技術部落格", "軟體開發", "管理經驗", "閱讀心得", "成長", "程式設計", "技術分享"];

// 準備結構化資料
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "headline": SITE_TITLE,
  "description": SITE_DESCRIPTION,
  "url": Astro.url.toString(),
  "author": {
    "@type": "Person",
    "name": "Ean Lee"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Ean Lee",
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/favicon.ico", Astro.url).toString()
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.toString()
  }
};
---

<!doctype html>
<html lang="zh-TW" itemscope itemtype="https://schema.org/Blog">
<head>
    <BaseHead 
      title={SITE_TITLE} 
      description={SITE_DESCRIPTION} 
      keywords={keywords}
    />
    <style>
        .home-container {
            width: 100%;
            max-width: 100%;
            margin: 0 auto;
        }

        .hero-section {
            margin: var(--spacing-xl) 0;
            padding: 2.5rem;
            background: var(--gradient-gray);
            border-radius: var(--radius-lg);
            text-align: center;
            box-shadow: var(--shadow-md);
            max-width: var(--container-2xl);
            margin-left: auto;
            margin-right: auto;
            padding-left: var(--spacing-md);
            padding-right: var(--spacing-md);
        }

        .hero-title {
            font-size: var(--font-size-4xl);
            font-weight: var(--font-weight-bold);
            margin-bottom: var(--spacing-md);
            color: var(--text-primary);
        }

        .hero-description {
            font-size: var(--font-size-xl);
            color: var(--text-secondary);
            max-width: 800px;
            margin: 0 auto;
            line-height: var(--line-height-relaxed);
        }

        .main-content {
            display: grid;
            grid-template-columns: 300px minmax(0, 1fr);
            gap: var(--spacing-xl);
            margin: var(--spacing-xl) 0 var(--spacing-2xl);
            max-width: var(--container-2xl);
            margin-left: auto;
            margin-right: auto;
            padding-left: var(--spacing-md);
            padding-right: var(--spacing-md);
        }

        .sidebar-area {
            width: 300px;
        }

        .content-area {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-xl);
        }

        .category-section {
            width: 100%;
        }

        @media (max-width: 1200px) {
            .main-content {
                grid-template-columns: 250px minmax(0, 1fr);
            }

            .sidebar-area {
                width: 250px;
            }
        }

        @media (max-width: 992px) {
            .main-content {
                grid-template-columns: 1fr;
            }

            .sidebar-area {
                display: none;
            }
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-description {
                font-size: 1rem;
            }
        }
    </style>

    <!-- Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</head>
<body>
<Header />

<div class="home-container">
    <div class="main-content">
        <div class="sidebar-area">
            <Sidebar />
        </div>
        
        <div class="content-area">
            <div class="epic-blocks">
                <EpicBlock 
                    title="軟體開發" 
                    posts={softwarePosts} 
                    viewAllLink="/software/" 
                />
                <EpicBlock 
                    title="管理經驗" 
                    posts={managementPosts} 
                    viewAllLink="/management/" 
                />
                <EpicBlock 
                    title="閱讀心得" 
                    posts={readingPosts} 
                    viewAllLink="/reading/" 
                />
                <EpicBlock 
                    title="自我成長" 
                    posts={growthPosts} 
                    viewAllLink="/growth/" 
                />
            </div>
        </div>
    </div>
</div>

<Footer />
</body>
</html>
