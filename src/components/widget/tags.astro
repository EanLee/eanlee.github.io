---
import { getCollection } from "astro:content";
import WidgetBase from "./WidgetBase.astro";

// 獲取所有文章
const posts = await getCollection("blog");

// 提取標籤
const allTags = posts
  .map((p) => (p.data.tags ? p.data.tags.map((t) => t.toLowerCase()) : []))
  .flat()
  .filter((tag) => tag);

interface TagCount {
  [tag: string]: number;
}
// 統計數量
const tagCounts = allTags.reduce((acc: TagCount, tag) => {
  if (!acc[tag]) {
    acc[tag] = 0;
  }
  acc[tag]++;
  return acc;
}, {});

// 排序
const tags = Object.keys(tagCounts).sort((a, b) => tagCounts[b] - tagCounts[a]);
---

<WidgetBase topic="Tags">
  <ul>
    {
      tags.map((tag) => (
        <li>
          <a class="tag" href={`/tags/${tag}/`}>
            {tag} ({tagCounts[tag]})
          </a>
        </li>
      ))
    }
  </ul>
</WidgetBase>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    line-height: normal;
  }

  li {
    display: inline-block;
    margin-right: 4px;
    margin-bottom: 4px;

    min-width: 50px;
  }

  ul a {
    text-transform: uppercase;
    white-space: pre-line;

    padding: 4px;

    font-size: small;
    font-weight: 700;

    color: grey;
    border-radius: 5px;
    border: 1px dashed lightgrey;
  }

  ul a:hover {
    font-weight: 700;
    color: black;
    border-color: black;
    border-style: solid;
  }
</style>
