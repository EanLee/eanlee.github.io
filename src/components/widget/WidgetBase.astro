---
interface Props {
  topic: string;
  icon?: string;
}

const { topic, icon } = Astro.props;

// Default icon if none provided
const defaultIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 8v4l3 3"/><circle cx="12" cy="12" r="10"/></svg>`;
---

<div class="sidebar-widget">
  <div class="widget-header">
    <h3 class="widget-title">
      <span set:html={icon || defaultIcon} />
      {topic}
    </h3>
  </div>
  <div class="widget-content">
    <slot />
  </div>
</div>

<style>
  .sidebar-widget {
    background-color: var(--color-bg-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .widget-header {
    margin-bottom: var(--spacing-xs);
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border-light);
  }

  .widget-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    margin: 0;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .widget-title :global(svg) {
    color: var(--color-primary);
  }

  .widget-content {
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .sidebar-widget {
      margin-bottom: var(--spacing-lg);
    }
  }
</style>
