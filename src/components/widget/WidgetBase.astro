---
interface Props {
  topic: string;
}

const { topic } = Astro.props;
---

<div>
  <p>{topic}</p>
  <slot />
</div>

<style>
  p {
    position: relative;
    padding-bottom: 5px;
    font-size: 1rem;
    font-weight: bold;
    font-style: italic;
    text-transform: uppercase;
    border-bottom: 3px solid #82b366;
  }

  div {
    margin-bottom: 20px;
  }
</style>
