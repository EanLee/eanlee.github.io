---
// 行動版可摺疊目錄
---

<details class="mobile-toc" open>
  <summary class="mobile-toc-summary">
    <svg class="toc-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="8" x2="21" y1="6" y2="6"/>
      <line x1="8" x2="21" y1="12" y2="12"/>
      <line x1="8" x2="21" y1="18" y2="18"/>
      <line x1="3" x2="3.01" y1="6" y2="6"/>
      <line x1="3" x2="3.01" y1="12" y2="12"/>
      <line x1="3" x2="3.01" y1="18" y2="18"/>
    </svg>
    <span class="toc-title">文章目錄</span>
    <svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="m6 9 6 6 6-6"/>
    </svg>
  </summary>
  <nav id="mobile-toc-nav" class="mobile-toc-content"></nav>
</details>

<script>
  function initMobileTOC() {
    const mobileTocNav = document.getElementById('mobile-toc-nav');
    const articleContent = document.querySelector('.article-content');
    const mobileTocWrapper = document.querySelector('.mobile-toc');

    if (!mobileTocNav || !articleContent) {
      return;
    }

    const headings = Array.from(
      articleContent.querySelectorAll('h2, h3, h4')
    );

    // 如果沒有標題，隱藏整個組件
    if (headings.length === 0 && mobileTocWrapper) {
      (mobileTocWrapper as HTMLElement).style.display = 'none';
      return;
    }

    mobileTocNav.innerHTML = '';
    const tocList = document.createElement('ul');
    tocList.className = 'mobile-toc-list';

    const tocLinks: HTMLAnchorElement[] = [];

    headings.forEach((heading, index) => {
      if (!heading.id) heading.id = `toc-heading-${index}`;

      const listItem = document.createElement('li');
      listItem.className = `mobile-toc-item mobile-toc-${heading.tagName.toLowerCase()}`;

      const link = document.createElement('a');
      link.href = `#${heading.id}`;
      link.textContent = heading.textContent || '';
      link.dataset.targetId = heading.id;

      // 點擊連結後自動收合 TOC
      link.addEventListener('click', () => {
        const details = document.querySelector('.mobile-toc') as HTMLDetailsElement;
        if (details && window.innerWidth < 1024) {
          setTimeout(() => {
            details.open = false;
          }, 300);
        }
      });

      listItem.appendChild(link);
      tocList.appendChild(listItem);
      tocLinks.push(link);
    });

    mobileTocNav.appendChild(tocList);

    // Scroll spy for mobile TOC
    let activeHeadingId: string | null = null;
    const intersectingHeadings = new Map();
    const firstHeading = headings[0];

    const scrollSpyObserver = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            intersectingHeadings.set(entry.target.id, entry);
          } else {
            intersectingHeadings.delete(entry.target.id);
          }
        }

        let newActiveId: string | null = null;
        if (intersectingHeadings.size > 0) {
          const topmostEntry = [...intersectingHeadings.values()].reduce(
            (a, b) => (a.boundingClientRect.top < b.boundingClientRect.top ? a : b)
          );
          newActiveId = topmostEntry.target.id;
        } else if (firstHeading && firstHeading.getBoundingClientRect().top > 80) {
          newActiveId = null;
        } else {
          return;
        }

        if (newActiveId !== activeHeadingId) {
          activeHeadingId = newActiveId;
          tocLinks.forEach((link) => {
            link.classList.remove('active');
            if (link.dataset.targetId === activeHeadingId) {
              link.classList.add('active');
            }
          });
        }
      },
      { rootMargin: '0px 0px -80% 0px', threshold: 0 }
    );

    headings.forEach((heading) => scrollSpyObserver.observe(heading));

    document.addEventListener('astro:before-swap', () => scrollSpyObserver.disconnect(), { once: true });
  }

  document.addEventListener('astro:page-load', initMobileTOC);
  document.addEventListener('DOMContentLoaded', initMobileTOC);

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileTOC);
  } else {
    initMobileTOC();
  }
</script>

<style>
  .mobile-toc {
    display: none;
    margin: var(--spacing-lg) 0;
    background: var(--color-bg-muted);
    border: 1px solid var(--card-border);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  @media (max-width: 1023px) {
    .mobile-toc {
      display: block;
    }
  }

  .mobile-toc-summary {
    padding: var(--spacing-md);
    cursor: pointer;
    font-weight: var(--font-weight-semibold);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    user-select: none;
    transition: background-color var(--transition-normal);
    color: var(--text-primary);
    list-style: none;
  }

  .mobile-toc-summary::-webkit-details-marker {
    display: none;
  }

  .mobile-toc-summary::marker {
    display: none;
  }

  .mobile-toc-summary:hover {
    background: rgba(var(--color-primary-rgb), 0.05);
  }

  .toc-icon {
    flex-shrink: 0;
    color: var(--accent);
  }

  .toc-title {
    flex: 1;
  }

  .chevron {
    flex-shrink: 0;
    transition: transform var(--transition-normal);
    color: var(--text-muted);
  }

  .mobile-toc[open] .chevron {
    transform: rotate(180deg);
  }

  .mobile-toc-content {
    padding: 0 var(--spacing-md) var(--spacing-md);
    border-top: 1px solid var(--card-border);
  }

  :global(.mobile-toc-list) {
    list-style: none;
    padding: 0;
    margin: var(--spacing-sm) 0 0;
  }

  :global(.mobile-toc-item) {
    margin-bottom: var(--spacing-xs);
  }

  :global(.mobile-toc-item a) {
    display: block;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: all var(--transition-normal);
    line-height: 1.5;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    border-left: 3px solid transparent;
  }

  :global(.mobile-toc-item.mobile-toc-h2 a) {
    padding-left: var(--spacing-sm);
    font-weight: var(--font-weight-medium);
  }

  :global(.mobile-toc-item.mobile-toc-h3 a) {
    padding-left: var(--spacing-lg);
  }

  :global(.mobile-toc-item.mobile-toc-h4 a) {
    padding-left: var(--spacing-xl);
    font-size: var(--font-size-xs);
  }

  :global(.mobile-toc-item a:hover) {
    color: var(--text-primary);
    background-color: rgba(var(--color-primary-rgb), 0.1);
  }

  :global(.mobile-toc-item a.active) {
    color: var(--accent);
    background-color: rgba(var(--color-primary-rgb), 0.1);
    border-left-color: var(--accent);
    font-weight: var(--font-weight-medium);
  }

  @media (max-width: 768px) {
    .mobile-toc {
      margin: var(--spacing-md) 0;
    }

    .mobile-toc-summary {
      padding: var(--spacing-sm) var(--spacing-md);
      font-size: var(--font-size-sm);
    }

    .mobile-toc-content {
      padding: 0 var(--spacing-sm) var(--spacing-sm);
    }

    :global(.mobile-toc-item a) {
      font-size: var(--font-size-xs);
    }
  }
</style>
