--- 
// src/components/TableOfContents.astro
// A sticky sidebar table of contents that appears when the main title is scrolled past.
---

<div class="toc-wrapper">
  <h3 class="toc-header">目錄</h3>
  <nav id="toc-nav" class="toc-nav"></nav>
</div>

<script>
  let tocObserver = null;
  let isInitialized = false;

  function initTOC() {
    // 防止重複初始化
    if (isInitialized) {
      return;
    }

    const tocNav = document.getElementById('toc-nav');
    const articleContent = document.querySelector('.article-content');

    if (!tocNav || !articleContent) {
      return;
    }

    const headings = Array.from(
      articleContent.querySelectorAll('h2, h3, h4')
    );
    const tocWrapper = document.querySelector('.toc-wrapper');

    if (headings.length === 0 && tocWrapper) {
      tocWrapper.style.display = 'none';
      return;
    }

    // 清理之前的內容
    tocNav.innerHTML = '';
    const tocList = document.createElement('ul');
    tocList.className = 'toc-list';

    const tocLinks = [];

    headings.forEach((heading, index) => {
      if (!heading.id) heading.id = `toc-heading-${index}`;

      const listItem = document.createElement('li');
      listItem.className = `toc-item toc-${heading.tagName.toLowerCase()}`;

      const link = document.createElement('a');
      link.href = `#${heading.id}`;
      link.textContent = heading.textContent || '';
      link.dataset.targetId = heading.id;

      listItem.appendChild(link);
      tocList.appendChild(listItem);
      tocLinks.push(link);
    });

    tocNav.appendChild(tocList);

    let activeHeadingId = null;

    // 清理之前的 observer
    if (tocObserver) {
      tocObserver.disconnect();
    }

    tocObserver = new IntersectionObserver(
      (entries) => {
        let topmostIntersectingEntry = null;
        for (const entry of entries) {
          if (entry.isIntersecting) {
            if (!topmostIntersectingEntry || entry.boundingClientRect.top < topmostIntersectingEntry.boundingClientRect.top) {
              topmostIntersectingEntry = entry;
            }
          }
        }

        const newActiveId = topmostIntersectingEntry ? topmostIntersectingEntry.target.id : null;

        if (newActiveId !== activeHeadingId) {
          activeHeadingId = newActiveId;
          tocLinks.forEach((link) => {
            link.classList.remove('active');
            if (link.dataset.targetId === activeHeadingId) {
              link.classList.add('active');
            }
          });
        }
      },
      { rootMargin: '0px 0px -80% 0px', threshold: 0 }
    );

    headings.forEach((heading) => tocObserver.observe(heading));
    isInitialized = true;
  }

  function cleanup() {
    if (tocObserver) {
      tocObserver.disconnect();
      tocObserver = null;
    }
    isInitialized = false;
  }

  // 簡化的初始化邏輯
  document.addEventListener('astro:page-load', () => {
    cleanup();
    setTimeout(initTOC, 100); // 小延遲確保 DOM 完全準備好
  });

  document.addEventListener('astro:before-swap', cleanup);

  // 首次載入
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initTOC, 100);
    });
  } else {
    setTimeout(initTOC, 100);
  }
</script>

<style>
  .toc-wrapper {
    position: sticky;
    top: calc(var(--spacing-3xl) + var(--spacing-md)); /* 80px */
    max-height: calc(100vh - calc(var(--spacing-3xl) + var(--spacing-2xl))); /* 100vh - 112px */
    overflow-y: auto;
    padding-left: var(--spacing-lg);
    align-self: start;
    /* 確保有正確的滾動上下文 */
    will-change: transform;
  }

  .toc-header {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
  }

  :global(.toc-list) {
    list-style: none;
    padding: 0;
    margin: 0;
    border-left: 1px solid var(--color-border-light);
  }

  :global(.toc-item a) {
    display: block;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: all var(--transition-normal);
    line-height: var(--line-height-normal);
    padding: var(--spacing-xs) 0 var(--spacing-xs) var(--spacing-md);
    border-left: 2px solid transparent;
  }

  :global(.toc-item.toc-h2 a) {
    padding-left: var(--spacing-md);
  }

  :global(.toc-item.toc-h3 a) {
    padding-left: var(--spacing-xl);
  }

  :global(.toc-item.toc-h4 a) {
    padding-left: var(--spacing-2xl);
    font-size: var(--font-size-xs);
  }

  :global(.toc-item a:hover) {
    color: var(--text-primary);
    background-color: var(--color-bg-muted);
  }

  :global(.toc-item a.active) {
    color: var(--color-primary);
    border-left-color: var(--color-primary);
  }

  /* 使用具體數值避免 CSS 變數在媒體查詢中的相容性問題 */
  @media (max-width: 1024px) {
    .toc-wrapper {
      display: none;
    }
  }
</style>