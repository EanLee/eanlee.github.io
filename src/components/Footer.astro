<!-- SEO 優化：作者結構化資料 -->
<script type="application/ld+json" set:html={JSON.stringify(authorSchema)} />

<style>
  footer {
    margin-top: var(--spacing-3xl);
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border-light);
  }

  .footer-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .footer-content {
    padding: var(--spacing-xl) 0 var(--spacing-lg) 0;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border-light);
  }

  /* 個人資訊區域 */
  .footer-about {
    max-width: 600px;
  }

  /* 品牌頭像區域 */
  .author-brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .author-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), rgba(var(--color-primary), 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-xl);
    box-shadow: var(--shadow-md);
    position: relative;
  }

  .author-avatar::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), transparent, var(--color-primary));
    z-index: -1;
    opacity: 0.3;
  }

  .avatar-initial {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .brand-info {
    flex: 1;
  }

  .author-name {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-xs) 0;
  }

  .author-role {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin: 0;
    font-weight: var(--font-weight-medium);
  }

  .author-descriptions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .author-description {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
    font-style: italic;
  }

  .author-focus {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
    font-weight: var(--font-weight-medium);
  }

  /* 連結區域 */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .link-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .section-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .link-section a {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-normal);
    padding: var(--spacing-xs) 0;
  }

  .link-section a:hover {
    color: var(--color-primary);
  }

  .project-link {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .project-name {
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
  }

  .project-desc {
    font-size: var(--font-size-xs);
    color: var(--text-secondary);
    font-weight: var(--font-weight-normal);
  }

  .project-link:hover .project-name {
    color: var(--color-primary);
  }

  .project-link:hover .project-desc {
    color: var(--text-primary);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) 0;
    transition: color var(--transition-normal);
  }

  .social-link.facebook:hover {
    color: #1877F2;
  }

  .social-link.linkedin:hover {
    color: #0077B5;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  .social-icon svg {
    width: 16px;
    height: 16px;
    transition: all var(--transition-normal);
  }


  /* 版權區域 */
  .footer-bottom {
    background: rgba(var(--color-black), 0.02);
  }

  .bottom-content {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: var(--spacing-sm);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .disclaimer {
    font-size: var(--font-size-xs);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .copyright {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
    margin: 0;
    font-weight: var(--font-weight-medium);
  }

  /* 響應式設計 */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
      text-align: center;
    }

    .footer-about {
      max-width: none;
    }

    .author-brand {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }

    .author-avatar {
      width: 50px;
      height: 50px;
      font-size: var(--font-size-lg);
    }

    .footer-links {
      flex-direction: row;
      justify-content: center;
      gap: var(--spacing-2xl);
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      padding: var(--spacing-xl) 0;
      gap: var(--spacing-lg);
    }

    .footer-links {
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    .author-name {
      font-size: var(--font-size-lg);
    }

    .author-avatar {
      width: 45px;
      height: 45px;
      font-size: var(--font-size-base);
    }

  }

  @media (max-width: 414px) {
    .footer-container {
      padding: 0 var(--spacing-sm);
    }

    .bottom-content {
      padding: var(--spacing-sm);
    }
  }
</style>
