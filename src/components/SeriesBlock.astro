---
import FormattedDate from "./FormattedDate.astro";
import type { CollectionEntry } from 'astro:content';

interface Props {
  title: string;
  seriesName: string;
  posts: CollectionEntry<'blog'>[];
  viewAllLink: string;
  epicColor: string;
}

const { title, seriesName, posts, viewAllLink, epicColor } = Astro.props;

// 計算顯示的文章數量 - 最多顯示5篇文章
const displayCount = Math.min(5, posts.length);
---

<div class="series-block" style={`--series-color: ${epicColor}`}>
  <div class="series-header">
    <h2 class="series-title">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
      {title}
    </h2>
    {posts.length > 0 && (
      <a href={viewAllLink} class="view-all">
        查看全部
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    )}
  </div>
  
  {posts.length > 0 ? (
    <div class="posts-list">
      {posts.slice(0, displayCount).map((post) => {
        const path = post.id.slice(0, post.id.lastIndexOf("/")).toLowerCase();
        return (
          <article class="post-card">
            <div class="post-content-wrapper">
              <div class="post-meta-row">
                <div class="post-date">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                  <FormattedDate date={post.data.date} />
                </div>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-tags"><path d="M9 5H2v7l6.29 6.29c.94.94 2.48.94 3.42 0l3.58-3.58c.94-.94.94-2.48 0-3.42L9 5Z"/><path d="M6 9.01V9"/><path d="m15 5 6.3 6.3a2.4 2.4 0 0 1 0 3.4L17 19"/></svg>
                    <div class="tag-wrapper">
                      {post.data.tags?.map((tag: string) => (
                        <a href={`/tags/${tag.toLowerCase()}/`} class="tag-link">
                          {tag}
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
              
              <h3 class="post-title">
                <a href={`/post/${path}/`}>{post.data.title}</a>
              </h3>
              
              {post.data.description && (
                <div class="post-excerpt">
                  {post.data.description}
                </div>
              )}
              
              <div class="post-actions">
                <a href={`/post/${path}/`} class="read-more">
                  繼續閱讀
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </a>
              </div>
            </div>
          </article>
        );
      })}
    </div>
  ) : (
    <div class="no-posts">
      <p>暫無相關文章</p>
    </div>
  )}
</div>

<style>
  /* 使用統一的設計令牌 */

  .series-block {
    margin-bottom: 2rem;
  }

  .series-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--series-color, #4299e1);
  }

  .series-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--title-color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .series-title svg {
    color: var(--series-color, #4299e1);
  }

  .view-all {
    font-size: 0.9rem;
    color: var(--series-color, #4299e1);
    text-decoration: none;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.2rem;
    font-weight: 500;
  }

  .view-all:hover {
    opacity: 0.8;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
  }

  .post-card {
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
    transition: box-shadow 0.2s ease;
  }

  .post-card:hover {
    box-shadow: 0 5px 15px var(--card-shadow);
  }

  .post-content-wrapper {
    padding: 1rem;
    display: flex;
    flex-direction: column;
  }

  .post-meta-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed var(--divider-color);
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--meta-color);
  }

  .post-tags {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
  }

  .tag-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag-link {
    background-color: var(--tag-bg);
    color: var(--tag-color);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .tag-link:hover {
    background-color: var(--tag-color);
    color: white;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--title-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: var(--series-color, #4299e1);
  }

  .post-excerpt {
    font-size: 0.95rem;
    color: var(--text-color);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .post-actions {
    margin-top: auto;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.9rem;
    color: var(--series-color, #4299e1);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .read-more:hover {
    opacity: 0.8;
  }

  .no-posts {
    padding: 2rem;
    text-align: center;
    color: var(--meta-color);
    background-color: #f9f9f9;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .post-meta-row {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
