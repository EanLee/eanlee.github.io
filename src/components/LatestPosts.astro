import FormattedDate from "./FormattedDate.astro";
import type { CollectionEntry } from 'astro:content';

interface Props {
  posts: CollectionEntry<'blog'>[];
  limit?: number;
}

const { posts, limit = 6 } = Astro.props;

// 取得最新文章，限制數量
const latestPosts = posts.slice(0, limit);

// 獲取 fallback 圖片
const fallbackImageModules = import.meta.glob("/public/cover/**/*.{png,jpg,jpeg,webp}", { eager: true });
const fallbackImages = Object.values(fallbackImageModules) as any[];

// 預載入所有文章中的圖片
const postImageModules = import.meta.glob("/src/content/blog/**/images/*.{png,jpg,jpeg,webp}", { eager: true });
const allPostImages = Object.values(postImageModules) as any[];

// 獲取文章的封面圖片
const getCoverImage = async (post: CollectionEntry<'blog'>) => {
  // 1. 優先使用 frontmatter 中的 coverImage
  if (post.data.coverImage) {
    // 如果是 image() helper 處理過的圖片，會有 src 屬性
    if (typeof post.data.coverImage === 'object' && post.data.coverImage.src) {
      return post.data.coverImage.src;
    }
    // 如果是字串（URL），直接返回
    if (typeof post.data.coverImage === 'string') {
      return post.data.coverImage;
    }
  }
  
  // 2. 嘗試從文章內容中找第一張圖片
  const { body } = post;
  const imageRegex = /!\[.*?\]\((.*?)\)/;
  const match = body.match(imageRegex);
  if (match && match[1]) {
    const imagePath = match[1];
    
    // 如果是 HTTP/HTTPS URL，直接返回
    if (imagePath.startsWith('http://') || imagePath.startsWith('https://')) {
      return imagePath;
    }
    
    // 如果是絕對路徑（以 / 開頭），直接返回
    if (imagePath.startsWith('/')) {
      return imagePath;
    }
    
    // 對於相對路徑，使用預載入的圖片映射
    if (imagePath.startsWith('./') || imagePath.startsWith('images/')) {
      const postPath = post.id.slice(0, post.id.lastIndexOf("/"));
      const cleanImagePath = imagePath.replace('./', '');
      
      // 在預載入的圖片中尋找匹配的圖片
      const matchingImage = allPostImages.find(img => {
        // 從 glob 結果中提取路徑資訊
        const imgPath = img.default?.default?.src || img.default?.src || img.default;
        
        if (typeof imgPath !== 'string') {
          // 嘗試從 import.meta.glob 的鍵中獲取路徑
          const moduleKeys = Object.keys(postImageModules);
          const matchingKey = moduleKeys.find(key => 
            key.includes(postPath) && key.includes(cleanImagePath)
          );
          
          return !!matchingKey;
        }
        
        // 檢查圖片路徑是否包含文章路徑和圖片名稱
        return imgPath.includes(postPath) && imgPath.includes(cleanImagePath);
      });
      
      if (matchingImage) {
        const imgSrc = matchingImage.default?.default?.src || matchingImage.default?.src || matchingImage.default;
        if (typeof imgSrc === 'string') {
          return imgSrc;
        }
        
        // 如果無法從圖片對象獲取 src，嘗試從模組鍵中直接獲取
        const moduleKeys = Object.keys(postImageModules);
        const matchingKey = moduleKeys.find(key => 
          key.includes(postPath) && key.includes(cleanImagePath)
        );
        
        if (matchingKey) {
          const moduleImg = postImageModules[matchingKey] as any;
          const moduleSrc = moduleImg?.default?.default?.src || moduleImg?.default?.src || moduleImg?.default;
          if (typeof moduleSrc === 'string') {
            return moduleSrc;
          }
        }
      }
      
      // 最後嘗試：直接從所有模組鍵中查找
      const moduleKeys = Object.keys(postImageModules);
      const directMatchingKey = moduleKeys.find(key => 
        key.includes(postPath) && key.includes(cleanImagePath)
      );
      
      if (directMatchingKey) {
        const directImg = postImageModules[directMatchingKey] as any;
        const directSrc = directImg?.default?.default?.src || directImg?.default?.src || directImg?.default;
        if (typeof directSrc === 'string') {
          return directSrc;
        }
      }
      
      // 如果沒找到匹配的圖片，記錄警告並使用 fallback
      console.warn(`無法找到相對路徑圖片: ${imagePath} in post ${post.id}`);
      
      // 使用 fallback 圖片
      if (fallbackImages.length > 0) {
        const randomIndex = Math.floor(Math.random() * fallbackImages.length);
        return fallbackImages[randomIndex].default.src;
      }
      return null;
    }
    
    // 其他情況直接返回路徑
    return imagePath;
  }
  
  // 3. 如果都沒有可用的圖片，使用隨機的 fallback 圖片
  if (fallbackImages.length > 0) {
    const randomIndex = Math.floor(Math.random() * fallbackImages.length);
    return fallbackImages[randomIndex].default.src;
  }
  
  // 4. 如果都沒有，返回 null
  return null;
};

// 為所有文章預先獲取封面圖片
const postsWithCoverImages = await Promise.all(
  latestPosts.map(async (post) => {
    const coverImage = await getCoverImage(post);
    return { ...post, coverImage };
  })
);

// 獲取文章的 epic 分類
const getPostEpic = (post: CollectionEntry<'blog'>) => {
  // 優先使用 epic 欄位
  if (post.data.epic) {
    return post.data.epic;
  } else {
    // 根據檔案路徑判斷分類
    const postPath = post.id.toLowerCase();
    if (postPath.startsWith('software/')) return 'software';
    if (postPath.startsWith('management/')) return 'management'; 
    if (postPath.startsWith('growth/')) return 'growth';
    // 默認歸類為軟體開發（因為大部分沒有 epic 欄位的文章都在 software 目錄下）
    return 'software';
  }
};

// 根據 epic 獲取圖標
const getEpicIcon = (epic: string) => {
  switch(epic) {
    case "software":
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/></svg>`;
    case "management":
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`;
    case "reading":
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>`;
    case "growth":
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 20h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.93a2 2 0 0 1-1.66-.9l-.82-1.2A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13c0 1.1.9 2 2 2Z"/></svg>`;
  }
};

// 根據 epic 獲取顏色
const getEpicColor = (epic: string) => {
  switch(epic) {
    case "software":
      return "#4299e1";
    case "management":
      return "#38a169";
    case "reading":
      return "#ed8936";
    case "growth":
      return "#9f7aea";
    default:
      return "#4299e1";
  }
};

// 獲取分類中文名稱
const getEpicName = (epic: string) => {
  switch(epic) {
    case "software":
      return "軟體開發";
    case "management":
      return "管理經驗";
    case "reading":
      return "閱讀心得";
    case "growth":
      return "自我成長";
    default:
      return "其他";
  }
};
