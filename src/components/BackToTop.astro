<button id="backToTopBtn" aria-label="Back to top" title="返回頂部">
  <div class="btn-content">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
      <path fill="none" d="M0 0h24v24H0z"/>
      <path d="M12 10.828l-4.95 4.95-1.414-1.414L12 8l6.364 6.364-1.414 1.414z" fill="currentColor"/>
    </svg>
    <span class="btn-text">TOP</span>
  </div>
</button>

<script>
  // Get the button
  const backToTopButton = document.getElementById("backToTopBtn") as HTMLElement | null;
  
  // Show the button when user scrolls down 500px from the top
  let scrollTimer: NodeJS.Timeout;
  window.addEventListener('scroll', function() {
    clearTimeout(scrollTimer);
    const scrollTop = document.body.scrollTop || document.documentElement.scrollTop;
    
    if (backToTopButton) {
      if (scrollTop > 500) {
        backToTopButton.classList.add('show');
      } else {
        backToTopButton.classList.remove('show');
      }
      
      // Add scrolling class for animation
      backToTopButton.classList.add('scrolling');
    }
    
    scrollTimer = setTimeout(function() {
      if (backToTopButton) {
        backToTopButton.classList.remove('scrolling');
      }
    }, 150);
  });
  
  // Scroll to the top when button is clicked
  if (backToTopButton) {
    backToTopButton.addEventListener("click", function() {
      backToTopButton.classList.add('clicked');
      window.scrollTo({
        top: 0,
        behavior: "smooth"
      });
      
      // Remove clicked class after animation
      setTimeout(function() {
        backToTopButton.classList.remove('clicked');
      }, 200);
    });
  }
</script>

<style>
  #backToTopBtn {
    position: fixed;
    bottom: var(--spacing-2xl);
    right: var(--spacing-2xl);
    z-index: var(--z-dropdown);
    border: none;
    outline: none;
    background: var(--gradient-primary);
    color: white;
    cursor: pointer;
    padding: 0;
    border-radius: var(--radius-xl);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    opacity: 0;
    visibility: hidden;
    transform: translateY(var(--spacing-md)) scale(0.8);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--color-white), 0.1);
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    transition: all var(--transition-slow);
  }

  .btn-text {
    font-family: 'Inter', system-ui, sans-serif;
    letter-spacing: 0.5px;
    line-height: 1;
  }
  
  #backToTopBtn.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }
  
  #backToTopBtn:hover {
    background: linear-gradient(135deg, #667eea 0%, var(--accent) 100%);
    transform: translateY(-4px) scale(1.05);
    box-shadow: var(--shadow-xl);
  }

  #backToTopBtn:hover .btn-content {
    transform: translateY(-1px);
  }

  #backToTopBtn.clicked {
    transform: translateY(0) scale(0.95);
    transition: transform var(--transition-fast);
  }

  #backToTopBtn.scrolling {
    animation: pulse 0.6s ease-in-out;
  }

  @keyframes pulse {
    0% { box-shadow: var(--shadow-lg); }
    50% { box-shadow: 0 8px 25px rgba(var(--accent-rgb), 0.4); }
    100% { box-shadow: var(--shadow-lg); }
  }

  @media (max-width: 768px) {
    #backToTopBtn {
      bottom: var(--spacing-lg);
      right: var(--spacing-lg);
      width: 52px;
      height: 52px;
      font-size: 10px;
    }
  }

  @media (max-width: 480px) {
    #backToTopBtn {
      bottom: var(--spacing-md);
      right: var(--spacing-md);
      width: 48px;
      height: 48px;
    }
  }
</style>
