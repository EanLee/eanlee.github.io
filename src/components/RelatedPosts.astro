---
// 相關文章推薦組件
// 基於標籤相似度推薦 3-5 篇相關文章

import { getCollection } from 'astro:content';

interface Props {
  currentSlug: string;
  currentTags: string[];
  maxPosts?: number;
}

const { currentSlug, currentTags, maxPosts = 4 } = Astro.props;

// 取得所有已發布的部落格文章
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// 計算標籤相似度分數
function calculateSimilarity(postTags: string[] = []): number {
  if (!currentTags || currentTags.length === 0 || !postTags || postTags.length === 0) {
    return 0;
  }

  // 計算交集數量
  const intersection = currentTags.filter(tag =>
    postTags.some(postTag =>
      postTag.toLowerCase() === tag.toLowerCase()
    )
  );

  // Jaccard 相似度：交集 / 聯集
  const union = new Set([
    ...currentTags.map(t => t.toLowerCase()),
    ...postTags.map(t => t.toLowerCase())
  ]);

  return intersection.length / union.size;
}

// 過濾並計算相關文章
const relatedPosts = allPosts
  .filter(post => post.slug !== currentSlug) // 排除當前文章
  .map(post => ({
    ...post,
    similarity: calculateSimilarity(post.data.tags)
  }))
  .filter(post => post.similarity > 0) // 只顯示有相關標籤的文章
  .sort((a, b) => {
    // 先按相似度排序
    if (b.similarity !== a.similarity) {
      return b.similarity - a.similarity;
    }
    // 相似度相同時，較新的文章優先
    return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
  })
  .slice(0, maxPosts);

// 如果沒有足夠的相關文章，補充最新文章
if (relatedPosts.length < maxPosts) {
  const recentPosts = allPosts
    .filter(post =>
      post.slug !== currentSlug &&
      !relatedPosts.some(rp => rp.slug === post.slug)
    )
    .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
    .slice(0, maxPosts - relatedPosts.length);

  relatedPosts.push(...recentPosts.map(post => ({ ...post, similarity: 0 })));
}
---

{relatedPosts.length > 0 && (
  <section class="related-posts-section">
    <h2 class="related-posts-title">
      <svg class="related-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M16 18l2 2 4-4"/>
        <circle cx="9" cy="9" r="7"/>
      </svg>
      相關文章推薦
    </h2>

    <div class="related-posts-grid">
      {relatedPosts.map((post, index) => {
        const postUrl = `/blog/${post.slug}`;
        const coverImage = post.data.image || '/images/default-cover.jpg';
        const formattedDate = new Date(post.data.date).toLocaleDateString('zh-TW', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        return (
          <article class="related-post-card">
            <a
              href={postUrl}
              class="related-post-link"
              data-related-post
              data-post-index={index}
              data-similarity={post.similarity.toFixed(2)}
            >
              {post.data.image && (
                <div class="related-post-image-wrapper">
                  <img
                    src={coverImage}
                    alt={`${post.data.title} - 相關文章封面`}
                    width="400"
                    height="200"
                    loading="lazy"
                    class="related-post-image"
                  />
                </div>
              )}

              <div class="related-post-content">
                <h3 class="related-post-title">{post.data.title}</h3>

                {post.data.description && (
                  <p class="related-post-description">
                    {post.data.description}
                  </p>
                )}

                <div class="related-post-meta">
                  <time datetime={post.data.date.toISOString()}>
                    {formattedDate}
                  </time>

                  {post.similarity > 0 && (
                    <span class="similarity-badge" title={`相似度 ${(post.similarity * 100).toFixed(0)}%`}>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                      </svg>
                      相似度高
                    </span>
                  )}
                </div>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="related-post-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="related-tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </article>
        );
      })}
    </div>
  </section>
)}

<script>
  function initRelatedPostsTracking() {
    const relatedLinks = document.querySelectorAll('[data-related-post]');

    relatedLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLElement;
        const postTitle = target.querySelector('.related-post-title')?.textContent || 'unknown';
        const postIndex = target.getAttribute('data-post-index') || 'unknown';
        const similarity = target.getAttribute('data-similarity') || '0';

        // GA4 事件追蹤
        if (typeof gtag !== 'undefined') {
          gtag('event', 'related_post_click', {
            post_title: postTitle,
            post_position: parseInt(postIndex) + 1,
            similarity_score: parseFloat(similarity),
            source_page: window.location.pathname,
            target_url: (target as HTMLAnchorElement).href
          });

          console.log('[GA4] Related post click:', {
            post_title: postTitle,
            post_position: parseInt(postIndex) + 1,
            similarity_score: parseFloat(similarity)
          });
        }
      });
    });
  }

  // 初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initRelatedPostsTracking);
  } else {
    initRelatedPostsTracking();
  }

  // Astro 頁面切換支援
  document.addEventListener('astro:page-load', initRelatedPostsTracking);
</script>

