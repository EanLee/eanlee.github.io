    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .related-tag {
    font-size: var(--font-size-xs);
    padding: 2px 8px;
    background: var(--color-bg-secondary);
    color: var(--text-secondary);
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border-light);
  }

