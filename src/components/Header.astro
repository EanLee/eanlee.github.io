---
import HeaderLink from "./HeaderLink.astro";
import Search from "./Search.astro";
import { SITE_TITLE } from "../consts";

const image = "/favicon.ico";
---

<header>
  <div class="header-div">
    <nav>
      <div class="logo">
          <img class="logo-img" src={image} alt="Logo"  />
          <div class="logo-text"><a href="/">{SITE_TITLE}</a></div>
      </div>

      <button
        class="mobile-menu-toggle"
        aria-label="選單"
        aria-expanded="false"
        aria-controls="mobile-nav"
        title="點擊開啟選單"
      >
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div id="mobile-nav" class="nav-right" aria-hidden="true">
        <Search />
        <div class="internal-links">
          <HeaderLink href="/software/">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/></svg>
            軟體開發
          </HeaderLink>
          <HeaderLink href="/management/">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            管理經驗
          </HeaderLink>
          <HeaderLink href="/reading/">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
            閱讀心得
          </HeaderLink>
          <HeaderLink href="/growth/">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
            自我成長
          </HeaderLink>
          <HeaderLink href="/archives/">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 2v20l2-1 2 1 2-1 2 1 2-1 2 1 2-1 2 1V2l-2 1-2-1-2 1-2-1-2 1-2-1-2 1-2-1Z"/><path d="M14 8H8"/><path d="M16 12H8"/><path d="M13 16H8"/></svg>
            所有文章
          </HeaderLink>
        </div>
      </div>
    </nav>
  </div>
</header>
<style>

  .header-div {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
  }

  header {
    margin: 0;
    padding: 0;
    background: var(--color-bg-primary);
    box-shadow: var(--shadow-md);
    width: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: var(--spacing-sm);
  }

  .logo-img {
    width: 64px;
    height: 64px;
  }

  .logo-text {
    margin: 0;
    font-size: 1.5em;
    font-weight: bold;
    display: inline-block;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  .logo-text a,
  .logo-text a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }


  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .internal-links {
    display: flex;
    flex-wrap: wrap;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
    gap: var(--spacing-xs);
    border-radius: var(--radius-sm);
    transition: background-color var(--transition-normal);
  }

  .mobile-menu-toggle:hover {
    background-color: rgba(var(--color-gray-light), 0.5);
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 3px;
    background-color: rgb(var(--color-black));
    border-radius: 2px;
    transition: all var(--transition-slow);
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* 漸進式隱藏導航項目 */
  @media (max-width: 1350px) {
    .internal-links a:nth-child(5) {
      display: none;
    }
  }

  @media (max-width: 1200px) {
    .internal-links a:nth-child(4) {
      display: none;
    }
  }

  @media (max-width: 1100px) {
    .internal-links a:nth-child(3) {
      display: none;
    }
  }

  @media (max-width: 1000px) {
    .internal-links a:nth-child(2) {
      display: none;
    }
  }

  @media (max-width: 900px) {
    .internal-links a:nth-child(1) {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
      z-index: 1001;
    }

    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .nav-right {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: var(--color-bg-primary);
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: var(--spacing-xl);
      transform: translateX(-100%);
      transition: transform var(--transition-slow);
      z-index: 1000;
      backdrop-filter: blur(5px);
    }

    .nav-right.active {
      transform: translateX(0);
    }

    .internal-links {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-md);
      align-items: center;
    }

    .internal-links a {
      padding: var(--spacing-md) var(--spacing-xl);
      text-align: center;
      border-radius: var(--radius-md);
      background-color: rgba(var(--color-primary), 0.1);
      border-bottom: 2px solid transparent;
      font-size: var(--font-size-lg);
      min-width: 200px;
      font-weight: var(--font-weight-medium);
      color: var(--text-primary);
      text-decoration: none;
      transition: all var(--transition-normal);
      box-shadow: var(--shadow-sm);
      display: block;
    }

    .internal-links a:hover,
    .internal-links a.active {
      background-color: var(--color-primary);
      color: var(--color-bg-primary);
      border-bottom-color: var(--color-primary);
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
  }

  @media (max-width: 768px) {
    .header-div {
      padding: 0 1rem;
    }

    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .logo {
      justify-content: flex-start;
    }

    .logo-img {
      width: 40px;
      height: 40px;
    }

    .logo-text {
      font-size: 1.1em;
    }
  }

  @media (max-width: 480px) {
    .internal-links a {
      padding: var(--spacing-sm) var(--spacing-md);
      font-size: var(--font-size-base);
      min-width: 180px;
    }
  }

  @media (max-width: 414px) {
    .header-div {
      padding: 0 0.5rem;
    }

    .logo-text {
      font-size: 1rem;
    }

    .logo-img {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const navRight = document.querySelector('.nav-right');

    if (!mobileMenuToggle || !navRight) {
      console.warn('Mobile menu elements not found');
      return;
    }

    // 移除之前的事件監聽器（避免重複綁定）
    mobileMenuToggle.replaceWith(mobileMenuToggle.cloneNode(true));
    const newMobileMenuToggle = document.querySelector('.mobile-menu-toggle') as HTMLElement | null;

    if (newMobileMenuToggle) {
      newMobileMenuToggle.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();

        const expanded = this.getAttribute('aria-expanded') === 'true';
        const newState = !expanded;

        console.log('Mobile menu toggle clicked');
        (this as HTMLElement).classList.toggle('active');
        navRight.classList.toggle('active');

        // 更新 ARIA 屬性
        this.setAttribute('aria-expanded', newState.toString());
        navRight.setAttribute('aria-hidden', (!newState).toString());

        // 防止背景滾動
        if (navRight.classList.contains('active')) {
          document.body.style.overflow = 'hidden';
          // 焦點管理：移動焦點到第一個連結
          const firstLink = navRight.querySelector('a') as HTMLElement;
          if (firstLink) {
            setTimeout(() => firstLink.focus(), 100);
          }
        } else {
          document.body.style.overflow = '';
        }
      });

      // 點擊連結後關閉選單
      const navLinks = document.querySelectorAll('.internal-links a');
      navLinks.forEach(link => {
        link.addEventListener('click', function() {
          if (newMobileMenuToggle) {
            newMobileMenuToggle.classList.remove('active');
            newMobileMenuToggle.setAttribute('aria-expanded', 'false');
          }
          navRight.classList.remove('active');
          navRight.setAttribute('aria-hidden', 'true');
          document.body.style.overflow = '';
        });
      });

      // 點擊背景關閉選單
      navRight.addEventListener('click', function(e) {
        if (e.target === navRight && newMobileMenuToggle) {
          newMobileMenuToggle.classList.remove('active');
          newMobileMenuToggle.setAttribute('aria-expanded', 'false');
          navRight.classList.remove('active');
          navRight.setAttribute('aria-hidden', 'true');
          document.body.style.overflow = '';
          newMobileMenuToggle.focus();
        }
      });

      // ESC 鍵關閉選單
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && navRight.classList.contains('active') && newMobileMenuToggle) {
          newMobileMenuToggle.classList.remove('active');
          newMobileMenuToggle.setAttribute('aria-expanded', 'false');
          navRight.classList.remove('active');
          navRight.setAttribute('aria-hidden', 'true');
          document.body.style.overflow = '';
          newMobileMenuToggle.focus();
        }
      });
    }
  }

  // 初始化和 Astro 頁面切換時重新初始化
  document.addEventListener('DOMContentLoaded', initMobileMenu);
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
