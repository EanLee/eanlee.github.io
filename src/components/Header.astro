---
import HeaderLink from "./HeaderLink.astro";
import SearchButton from "./SearchButton.astro";
import { SITE_TITLE } from "../consts";

const image = "/favicon.ico";
---

<header>
  <div class="header-div">
    <nav>
      <div class="logo">
          <img class="logo-img" src={image} alt="Logo"  />
          <h2><a href="/">{SITE_TITLE}</a></h2>
      </div>

      <button class="mobile-menu-toggle" aria-label="開啟選單" title="點擊開啟選單">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="nav-right">
        <div class="search-wrapper">
          <SearchButton />
        </div>
        <div class="internal-links">          
          <HeaderLink href="/software/">軟體開發</HeaderLink>
          <HeaderLink href="/management/">管理經驗</HeaderLink>
          <HeaderLink href="/reading/">閱讀心得</HeaderLink>
          <HeaderLink href="/growth/">自我成長</HeaderLink>
          <HeaderLink href="/archives/">所有文章</HeaderLink>
        </div>
      </div>
    </nav>
  </div>
</header>
<style>

  .header-div {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
  }

  header {
    margin: 0;
    padding: 0;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    width: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    flex-direction: row; 
  }

  .logo-img {
    width: 64px;
    height: 64px;
  }

  .logo h2 {
    margin: 0;
    font-size: 1.5em;
    font-weight: bold;
    display: inline-block;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-wrapper {
    display: flex;
    align-items: center;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .internal-links {
    display: flex;
    flex-wrap: wrap;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
    gap: var(--spacing-xs);
    border-radius: var(--radius-sm);
    transition: background-color var(--transition-normal);
  }
  
  .mobile-menu-toggle:hover {
    background-color: rgba(var(--color-gray-light), 0.5);
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 3px;
    background-color: rgb(var(--color-black));
    border-radius: 2px;
    transition: all var(--transition-slow);
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  @media (max-width: 768px) {
    .header-div {
      padding: 0 1rem;
    }

    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .logo {
      justify-content: flex-start;
    }

    .logo-img {
      width: 40px;
      height: 40px;
    }

    .logo h2 {
      font-size: 1.1em;
    }

    .mobile-menu-toggle {
      display: flex;
      z-index: 1001;
    }

    .nav-right {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: var(--color-bg-primary);
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: var(--spacing-xl);
      transform: translateX(-100%);
      transition: transform var(--transition-slow);
      z-index: 1000;
      backdrop-filter: blur(5px);
    }

    .nav-right.active {
      transform: translateX(0);
    }

    .search-wrapper {
      order: -1; /* 在手機版時優先顯示 */
    }

    .internal-links {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-md);
      align-items: center;
    }

    .internal-links a {
      padding: var(--spacing-md) var(--spacing-xl);
      text-align: center;
      border-radius: var(--radius-md);
      background-color: rgba(var(--color-primary), 0.1);
      border-bottom: 2px solid transparent;
      font-size: var(--font-size-lg);
      min-width: 200px;
      font-weight: var(--font-weight-medium);
      color: var(--text-primary);
      text-decoration: none;
      transition: all var(--transition-normal);
      box-shadow: var(--shadow-sm);
    }

    .internal-links a:hover,
    .internal-links a.active {
      background-color: var(--color-primary);
      color: var(--color-bg-primary);
      border-bottom-color: var(--color-primary);
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
  }

  @media (max-width: 480px) {
    .internal-links a {
      padding: var(--spacing-sm) var(--spacing-md);
      font-size: var(--font-size-base);
      min-width: 180px;
    }
  }

  @media (max-width: 414px) {
    .header-div {
      padding: 0 0.5rem;
    }

    .logo h2 {
      font-size: 1rem;
    }
    
    .logo-img {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const navRight = document.querySelector('.nav-right');
    
    if (!mobileMenuToggle || !navRight) {
      console.warn('Mobile menu elements not found');
      return;
    }

    // 移除之前的事件監聽器（避免重複綁定）
    mobileMenuToggle.replaceWith(mobileMenuToggle.cloneNode(true));
    const newMobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    
    newMobileMenuToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      console.log('Mobile menu toggle clicked');
      this.classList.toggle('active');
      navRight.classList.toggle('active');
      
      // 防止背景滾動
      if (navRight.classList.contains('active')) {
        document.body.style.overflow = 'hidden';
      } else {
        document.body.style.overflow = '';
      }
    });

    // 點擊連結後關閉選單
    const navLinks = document.querySelectorAll('.internal-links a');
    navLinks.forEach(link => {
      link.addEventListener('click', function() {
        newMobileMenuToggle.classList.remove('active');
        navRight.classList.remove('active');
        document.body.style.overflow = '';
      });
    });

    // 點擊背景關閉選單
    navRight.addEventListener('click', function(e) {
      if (e.target === navRight) {
        newMobileMenuToggle.classList.remove('active');
        navRight.classList.remove('active');
        document.body.style.overflow = '';
      }
    });

    // ESC 鍵關閉選單
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && navRight.classList.contains('active')) {
        newMobileMenuToggle.classList.remove('active');
        navRight.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  }

  // 初始化和 Astro 頁面切換時重新初始化
  document.addEventListener('DOMContentLoaded', initMobileMenu);
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
