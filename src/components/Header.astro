<style>
  .header-div {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
  }

  header {
    margin: 0;
    padding: 0;
    background: var(--color-bg-primary);
    box-shadow: var(--shadow-md);
    width: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: var(--spacing-sm);
  }

  .logo-img {
    width: 64px;
    height: 64px;
  }

  .logo-text {
    margin: 0;
    font-size: 1.5em;
    font-weight: bold;
    display: inline-block;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  .logo-text a,
  .logo-text a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--color-text);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--color-primary);
  }

  .internal-links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ===========================
     桌面版下拉選單
     =========================== */

  .nav-dropdown {
    position: relative;
  }

  .nav-dropdown-trigger {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 1em 0.5em;
    color: var(--color-text);
    background: none;
    border: none;
    border-bottom: 4px solid transparent;
    cursor: pointer;
    font-size: inherit;
    font-family: inherit;
    font-weight: inherit;
    transition:
      color var(--transition-normal),
      border-bottom-color var(--transition-normal);
    white-space: nowrap;
  }

  .nav-dropdown-trigger:hover {
    color: var(--color-primary);
  }

  .dropdown-chevron {
    transition: transform var(--transition-normal);
  }

  /* hover 展開下拉（桌面版純 CSS） */
  .nav-dropdown:hover .nav-dropdown-trigger,
  .nav-dropdown:focus-within .nav-dropdown-trigger {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  .nav-dropdown:hover .dropdown-chevron,
  .nav-dropdown:focus-within .dropdown-chevron {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: calc(100% + 2px);
    right: 0;
    min-width: 160px;
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    list-style: none;
    margin: 0;
    padding: var(--spacing-xs) 0;
    z-index: 200;
  }

  .nav-dropdown:hover .dropdown-menu,
  .nav-dropdown:focus-within .dropdown-menu {
    display: block;
  }

  /* aria-expanded 狀態（JS 控制鍵盤導覽用） */
  .nav-dropdown-trigger[aria-expanded="true"] ~ .dropdown-menu {
    display: block;
  }

  .nav-dropdown-trigger[aria-expanded="true"] .dropdown-chevron {
    transform: rotate(180deg);
  }

  .dropdown-menu li {
    margin: 0;
    padding: 0;
  }

  .dropdown-menu a {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--color-text);
    border-bottom: none;
    text-decoration: none;
    transition: background-color var(--transition-normal), color var(--transition-normal);
    white-space: nowrap;
    font-size: var(--font-size-sm);
  }

  .dropdown-menu a:hover {
    background-color: var(--color-bg-muted);
    color: var(--color-primary);
  }

  /* 行動版顯示控制 */
  .mobile-only {
    display: none;
  }

  .desktop-only {
    display: block;
  }

  /* ===========================
     漢堡選單（行動版）
     =========================== */

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    cursor: pointer;
    padding: var(--spacing-sm);
    gap: var(--spacing-xs);
    border-radius: var(--radius-sm);
    transition:
      background-color var(--transition-normal),
      border-color var(--transition-normal);
  }

  .mobile-menu-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 3px;
    background-color: #ffffff;
    border-radius: 2px;
    transition: all var(--transition-slow);
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* ===========================
     響應式：768px 以下
     =========================== */
  @media (max-width: 768px) {
    header {
      position: relative;
    }

    .mobile-menu-toggle {
      display: flex;
      z-index: 1001;
    }

    /* 桌面版下拉在行動版隱藏 */
    header .desktop-only {
      display: none;
    }

    /* 行動版探索群組顯示 */
    .mobile-only {
      display: block;
    }

    /* 隱藏所有導航項目（預設） */
    header .internal-links {
      display: none;
    }

    /* nav-right 預設隱藏 */
    .nav-right {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      background-color: var(--color-bg-primary);
      box-shadow: var(--shadow-lg);
      border-radius: var(--radius-md);
      margin-top: 0.5rem;
      min-width: 200px;
    }

    /* 漢堡選單打開時顯示 */
    .nav-right.active {
      display: block;
    }

    .nav-right.active .internal-links {
      display: flex;
      flex-direction: column;
      gap: 0;
      padding: var(--spacing-sm) 0;
    }

    .internal-links a {
      padding: var(--spacing-md) var(--spacing-lg);
      color: var(--color-text);
      border-bottom: none;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      transition: background-color var(--transition-normal);
    }

    .internal-links a:hover {
      background-color: rgba(var(--color-primary-rgb), 0.1);
    }

    .internal-links a.active {
      background-color: rgba(var(--color-primary-rgb), 0.15);
      color: var(--color-primary);
    }

    /* 行動版探索群組樣式 */
    .mobile-explore-group {
      width: 100%;
    }

    .mobile-explore-label {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      padding: var(--spacing-xs) var(--spacing-lg);
      color: var(--color-text-muted);
      font-size: var(--font-size-xs);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      border-top: 1px solid var(--color-border-light);
      margin-top: var(--spacing-xs);
    }

    .mobile-explore-item {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      padding: var(--spacing-md) var(--spacing-lg) var(--spacing-md) calc(var(--spacing-lg) + 1.25rem);
      color: var(--color-text);
      text-decoration: none;
      border-bottom: none;
      transition: background-color var(--transition-normal);
      font-size: var(--font-size-base);
    }

    .mobile-explore-item:hover {
      background-color: rgba(var(--color-primary-rgb), 0.1);
    }
  }

  @media (max-width: 768px) {
    .header-div {
      padding: 0 1rem;
    }

    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .logo {
      justify-content: flex-start;
    }

    .logo-img {
      width: 40px;
      height: 40px;
    }

    .logo-text {
      font-size: 1.1em;
    }
  }

  @media (max-width: 480px) {
    .internal-links a {
      padding: var(--spacing-sm) var(--spacing-md);
      font-size: var(--font-size-base);
      min-width: 180px;
    }

    .mobile-explore-item {
      padding: var(--spacing-sm) var(--spacing-md) var(--spacing-sm) calc(var(--spacing-md) + 1.25rem);
    }
  }

  @media (max-width: 414px) {
    .header-div {
      padding: 0 0.5rem;
    }

    .logo-text {
      font-size: 1rem;
    }

    .logo-img {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  // AbortController 用於清理跨頁切換殘留的 document 事件監聽器
  let keydownAbortController: AbortController | null = null;

  function initMobileMenu() {
    const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
    const navRight = document.querySelector(".nav-right");

    if (!mobileMenuToggle || !navRight) {
      return;
    }

    // 移除之前的事件監聽器（避免重複綁定）
    mobileMenuToggle.replaceWith(mobileMenuToggle.cloneNode(true));
    const newMobileMenuToggle = document.querySelector(".mobile-menu-toggle") as HTMLElement | null;

    if (newMobileMenuToggle) {
      newMobileMenuToggle.addEventListener("click", function (e) {
        e.preventDefault();
        e.stopPropagation();

        const expanded = this.getAttribute("aria-expanded") === "true";
        const newState = !expanded;

        (this as HTMLElement).classList.toggle("active");
        navRight.classList.toggle("active");

        // 更新 ARIA 屬性
        this.setAttribute("aria-expanded", newState.toString());
        navRight.setAttribute("aria-hidden", (!newState).toString());

        // 防止背景滾動
        if (navRight.classList.contains("active")) {
          document.body.style.overflow = "hidden";
          // 焦點管理：移動焦點到第一個連結
          const firstLink = navRight.querySelector("a") as HTMLElement;
          if (firstLink) {
            setTimeout(() => firstLink.focus(), 100);
          }
        } else {
          document.body.style.overflow = "";
        }
      });

      // 點擊連結後關閉選單（包含行動版探索子項目）
      const navLinks = document.querySelectorAll(".internal-links a, .mobile-explore-item");
      navLinks.forEach((link) => {
        link.addEventListener("click", function () {
          if (newMobileMenuToggle) {
            newMobileMenuToggle.classList.remove("active");
            newMobileMenuToggle.setAttribute("aria-expanded", "false");
          }
          navRight.classList.remove("active");
          navRight.setAttribute("aria-hidden", "true");
          document.body.style.overflow = "";
        });
      });

      // 點擊背景關閉選單
      navRight.addEventListener("click", function (e) {
        if (e.target === navRight && newMobileMenuToggle) {
          newMobileMenuToggle.classList.remove("active");
          newMobileMenuToggle.setAttribute("aria-expanded", "false");
          navRight.classList.remove("active");
          navRight.setAttribute("aria-hidden", "true");
          document.body.style.overflow = "";
          newMobileMenuToggle.focus();
        }
      });

      // ESC 鍵關閉選單（使用 AbortController 避免跨頁累積）
      keydownAbortController?.abort();
      keydownAbortController = new AbortController();
      document.addEventListener(
        "keydown",
        function (e) {
          if (e.key === "Escape" && navRight.classList.contains("active") && newMobileMenuToggle) {
            newMobileMenuToggle.classList.remove("active");
            newMobileMenuToggle.setAttribute("aria-expanded", "false");
            navRight.classList.remove("active");
            navRight.setAttribute("aria-hidden", "true");
            document.body.style.overflow = "";
            newMobileMenuToggle.focus();
          }
        },
        { signal: keydownAbortController.signal }
      );
    }
  }

  // 桌面版下拉：鍵盤導覽支援 + hover aria-expanded 同步
  function initDropdownKeyboard() {
    const triggers = document.querySelectorAll<HTMLButtonElement>(".nav-dropdown-trigger");

    triggers.forEach((trigger) => {
      // 移除舊監聽器
      const newTrigger = trigger.cloneNode(true) as HTMLButtonElement;
      trigger.replaceWith(newTrigger);

      // hover 展開時同步 aria-expanded（無障礙輔助技術需要）
      const dropdown = newTrigger.closest(".nav-dropdown");
      if (dropdown) {
        dropdown.addEventListener("mouseenter", () => {
          newTrigger.setAttribute("aria-expanded", "true");
        });
        dropdown.addEventListener("mouseleave", () => {
          // 若非透過鍵盤開啟（style.display 未被 JS 覆寫），才重設
          const menu = dropdown.querySelector<HTMLElement>(".dropdown-menu");
          if (!menu || menu.style.display !== "block") {
            newTrigger.setAttribute("aria-expanded", "false");
          }
        });
      }

      newTrigger.addEventListener("keydown", function (e) {
        const dropdownEl = this.closest(".nav-dropdown");
        const menu = dropdownEl?.querySelector<HTMLElement>(".dropdown-menu");
        if (!menu) return;

        if (e.key === "Enter" || e.key === " " || e.key === "ArrowDown") {
          e.preventDefault();
          const isOpen = this.getAttribute("aria-expanded") === "true";
          if (!isOpen) {
            // 開啟
            this.setAttribute("aria-expanded", "true");
            menu.style.display = "block";
            const firstItem = menu.querySelector<HTMLElement>("a");
            firstItem?.focus();
          }
        }

        if (e.key === "Escape") {
          this.setAttribute("aria-expanded", "false");
          menu.style.display = "";
          this.focus();
        }
      });

      // 失去焦點時關閉（若焦點離開整個 dropdown）
      newTrigger.addEventListener("blur", function () {
        const dropdownEl = this.closest(".nav-dropdown");
        setTimeout(() => {
          if (!dropdownEl?.contains(document.activeElement)) {
            this.setAttribute("aria-expanded", "false");
            const menu = dropdownEl?.querySelector<HTMLElement>(".dropdown-menu");
            if (menu) menu.style.display = "";
          }
        }, 150);
      });
    });

    // 下拉選單內鍵盤導覽
    const dropdownMenus = document.querySelectorAll<HTMLElement>(".dropdown-menu");
    dropdownMenus.forEach((menu) => {
      const newMenu = menu.cloneNode(true) as HTMLElement;
      menu.replaceWith(newMenu);

      newMenu.addEventListener("keydown", function (e) {
        const items = Array.from(this.querySelectorAll<HTMLElement>("a"));
        const current = document.activeElement as HTMLElement;
        const idx = items.indexOf(current);

        if (e.key === "ArrowDown") {
          e.preventDefault();
          items[(idx + 1) % items.length]?.focus();
        } else if (e.key === "ArrowUp") {
          e.preventDefault();
          items[(idx - 1 + items.length) % items.length]?.focus();
        } else if (e.key === "Escape" || e.key === "Tab") {
          const dropdownEl = this.closest(".nav-dropdown");
          const triggerEl = dropdownEl?.querySelector<HTMLElement>(".nav-dropdown-trigger");
          if (triggerEl) {
            triggerEl.setAttribute("aria-expanded", "false");
            this.style.display = "";
            triggerEl.focus();
          }
          if (e.key === "Tab") return; // Tab 鍵允許正常行為
          e.preventDefault();
        }
      });

      // 焦點離開選單時關閉
      newMenu.addEventListener("focusout", function (e) {
        const dropdownEl = this.closest(".nav-dropdown");
        const related = (e as FocusEvent).relatedTarget as HTMLElement | null;
        setTimeout(() => {
          if (!dropdownEl?.contains(document.activeElement) && !dropdownEl?.contains(related)) {
            const triggerEl = dropdownEl?.querySelector<HTMLButtonElement>(".nav-dropdown-trigger");
            if (triggerEl) {
              triggerEl.setAttribute("aria-expanded", "false");
              this.style.display = "";
            }
          }
        }, 150);
      });
    });
  }

  // 初始化和 Astro 頁面切換時重新初始化
  document.addEventListener("DOMContentLoaded", () => {
    initMobileMenu();
    initDropdownKeyboard();
  });
  document.addEventListener("astro:page-load", () => {
    initMobileMenu();
    initDropdownKeyboard();
  });
</script>
