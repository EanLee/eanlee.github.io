---
import HeaderLink from "./HeaderLink.astro";
import SearchBar from "./SearchBar.astro";
import { SITE_TITLE } from "../consts";

const image = "/favicon.ico";
---

<header>
  <div class="header-div">
    <nav>
      <div class="logo">
        <a href="/">
          <img class="logo-img" src={image} alt="Logo"  />
          <h2>{SITE_TITLE}</h2>
        </a>
      </div>

      <div class="nav-right">
        <div class="search-wrapper">
          <SearchBar />
        </div>
        <div class="internal-links">
          <HeaderLink href="/">Home</HeaderLink>
          <HeaderLink href="/archives/">Archives</HeaderLink>
        </div>
      </div>
    </nav>
  </div>
</header>
<style>

  .header-div {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 1em;
  }

  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  .logo {
    display: flex;
    align-items: center;
    flex-direction: row; 
  }

  .logo-img {
    width: 64px;
    height: 64px;
  }

  .logo h2 {
    margin: 0;
    font-size: 1.5em;
    font-weight: bold;
    display: inline-block;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-wrapper {
    width: 250px;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      align-items: flex-start;
      padding: 0.5rem 0;
    }

    .nav-right {
      width: 100%;
      flex-direction: column;
      align-items: flex-start;
      margin-top: 0.5rem;
    }

    .search-wrapper {
      width: 100%;
      margin-bottom: 0.5rem;
    }

    .internal-links {
      width: 100%;
      display: flex;
      justify-content: flex-start;
    }
  }
</style>
