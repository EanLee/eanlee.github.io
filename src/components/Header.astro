---
import HeaderLink from "./HeaderLink.astro";
import SearchBar from "./SearchBar.astro";
import { SITE_TITLE } from "../consts";

const image = "/favicon.ico";
---

<header>
  <div class="header-div">
    <nav>
      <div class="logo">
          <img class="logo-img" src={image} alt="Logo"  />
          <h2>{SITE_TITLE}</h2>
      </div>

      <button class="mobile-menu-toggle" aria-label="開啟選單">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="nav-right">
        <div class="search-wrapper">
          <SearchBar />
        </div>
        <div class="internal-links">
          <HeaderLink href="/">Home</HeaderLink>
          <HeaderLink href="/software/">軟體開發</HeaderLink>
          <HeaderLink href="/management/">管理經驗</HeaderLink>
          <HeaderLink href="/reading/">閱讀心得</HeaderLink>
          <HeaderLink href="/growth/">自我成長</HeaderLink>
          <HeaderLink href="/archives/">所有文章</HeaderLink>
        </div>
      </div>
    </nav>
  </div>
</header>
<style>

  .header-div {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
  }

  header {
    margin: 0;
    padding: 0;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    width: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    flex-direction: row; 
  }

  .logo-img {
    width: 64px;
    height: 64px;
  }

  .logo h2 {
    margin: 0;
    font-size: 1.5em;
    font-weight: bold;
    display: inline-block;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-wrapper {
    width: 250px;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .internal-links {
    display: flex;
    flex-wrap: wrap;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.25rem;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background-color: var(--black);
    transition: all 0.3s ease;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  @media (max-width: 768px) {
    .header-div {
      padding: 0 1rem;
    }

    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .logo {
      justify-content: flex-start;
    }

    .logo-img {
      width: 40px;
      height: 40px;
    }

    .logo h2 {
      font-size: 1.1em;
    }

    .mobile-menu-toggle {
      display: flex;
      z-index: 1001;
    }

    .nav-right {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: white;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 1000;
    }

    .nav-right.active {
      transform: translateX(0);
    }

    .search-wrapper {
      width: 80%;
      max-width: 300px;
    }

    .internal-links {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .internal-links a {
      padding: 1rem 2rem;
      text-align: center;
      border-radius: 8px;
      background-color: rgba(var(--accent-light), 0.1);
      border-bottom: 2px solid transparent;
      font-size: 1.1rem;
      min-width: 200px;
      transition: all 0.2s ease;
    }

    .internal-links a:hover,
    .internal-links a.active {
      background-color: rgba(var(--accent), 0.15);
      border-bottom-color: var(--accent);
      transform: translateY(-2px);
    }
  }

  @media (max-width: 480px) {
    .internal-links {
      grid-template-columns: 1fr;
    }

    .internal-links a {
      padding: 0.6rem 0.5rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 414px) {
    .header-div {
      padding: 0 0.5rem;
    }

    .logo h2 {
      font-size: 1rem;
    }
    
    .logo-img {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const navRight = document.querySelector('.nav-right');
    
    if (mobileMenuToggle) {
      mobileMenuToggle.addEventListener('click', function() {
        this.classList.toggle('active');
        navRight?.classList.toggle('active');
        
        // 防止背景滾動
        if (navRight?.classList.contains('active')) {
          document.body.style.overflow = 'hidden';
        } else {
          document.body.style.overflow = '';
        }
      });
    }

    // 點擊連結後關閉選單
    const navLinks = document.querySelectorAll('.internal-links a');
    navLinks.forEach(link => {
      link.addEventListener('click', function() {
        mobileMenuToggle?.classList.remove('active');
        navRight?.classList.remove('active');
        document.body.style.overflow = '';
      });
    });

    // 點擊背景關閉選單
    navRight?.addEventListener('click', function(e) {
      if (e.target === navRight) {
        mobileMenuToggle?.classList.remove('active');
        navRight?.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });
</script>
