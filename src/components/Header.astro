<style>
  .header-div {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
  }

  header {
    margin: 0;
    padding: 0;
    background: var(--color-bg-primary);
    box-shadow: var(--shadow-md);
    width: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: var(--spacing-sm);
  }

  .logo-img {
    width: 64px;
    height: 64px;
  }

  .logo-text {
    margin: 0;
    font-size: 1.5em;
    font-weight: bold;
    display: inline-block;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  .logo-text a,
  .logo-text a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .internal-links {
    display: flex;
    flex-wrap: wrap;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    cursor: pointer;
    padding: var(--spacing-sm);
    gap: var(--spacing-xs);
    border-radius: var(--radius-sm);
    transition:
      background-color var(--transition-normal),
      border-color var(--transition-normal);
  }

  .mobile-menu-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 3px;
    background-color: #ffffff;
    border-radius: 2px;
    transition: all var(--transition-slow);
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* 響應式設計：1100px 以下切換到漢堡菜單模式 */
  @media (max-width: 1100px) {
    header {
      position: relative;
    }

    .mobile-menu-toggle {
      display: flex;
      z-index: 1001;
    }

    /* 隱藏所有導航項目 */
    .internal-links {
      display: none !important;
    }

    /* 設定 nav-right 在預設狀態 */
    .nav-right {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      background-color: var(--color-bg-primary);
      box-shadow: var(--shadow-lg);
      border-radius: var(--radius-md);
      margin-top: 0.5rem;
      min-width: 200px;
    }

    /* 設定漢堡菜單打開時為下拉選單 */
    .nav-right.active {
      display: block;
    }

    .nav-right.active .internal-links {
      display: flex !important;
      flex-direction: column;
      gap: 0;
      padding: var(--spacing-sm) 0;
    }

    .internal-links a {
      padding: var(--spacing-md) var(--spacing-lg);
      color: var(--black);
      border-bottom: none;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      transition: background-color var(--transition-normal);
    }

    .internal-links a:hover {
      background-color: rgba(var(--color-primary), 0.1);
    }

    .internal-links a.active {
      background-color: rgba(var(--color-primary), 0.15);
      color: var(--color-primary);
    }
  }

  @media (max-width: 768px) {
    .header-div {
      padding: 0 1rem;
    }

    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .logo {
      justify-content: flex-start;
    }

    .logo-img {
      width: 40px;
      height: 40px;
    }

    .logo-text {
      font-size: 1.1em;
    }
  }

  @media (max-width: 480px) {
    .internal-links a {
      padding: var(--spacing-sm) var(--spacing-md);
      font-size: var(--font-size-base);
      min-width: 180px;
    }
  }

  @media (max-width: 414px) {
    .header-div {
      padding: 0 0.5rem;
    }

    .logo-text {
      font-size: 1rem;
    }

    .logo-img {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
    const navRight = document.querySelector(".nav-right");

    if (!mobileMenuToggle || !navRight) {
      console.warn("Mobile menu elements not found");
      return;
    }

    // 移除之前的事件監聽器（避免重複綁定）
    mobileMenuToggle.replaceWith(mobileMenuToggle.cloneNode(true));
    const newMobileMenuToggle = document.querySelector(".mobile-menu-toggle") as HTMLElement | null;

    if (newMobileMenuToggle) {
      newMobileMenuToggle.addEventListener("click", function (e) {
        e.preventDefault();
        e.stopPropagation();

        const expanded = this.getAttribute("aria-expanded") === "true";
        const newState = !expanded;

        console.log("Mobile menu toggle clicked");
        (this as HTMLElement).classList.toggle("active");
        navRight.classList.toggle("active");

        // 更新 ARIA 屬性
        this.setAttribute("aria-expanded", newState.toString());
        navRight.setAttribute("aria-hidden", (!newState).toString());

        // 防止背景滾動
        if (navRight.classList.contains("active")) {
          document.body.style.overflow = "hidden";
          // 焦點管理：移動焦點到第一個連結
          const firstLink = navRight.querySelector("a") as HTMLElement;
          if (firstLink) {
            setTimeout(() => firstLink.focus(), 100);
          }
        } else {
          document.body.style.overflow = "";
        }
      });

      // 點擊連結後關閉選單
      const navLinks = document.querySelectorAll(".internal-links a");
      navLinks.forEach((link) => {
        link.addEventListener("click", function () {
          if (newMobileMenuToggle) {
            newMobileMenuToggle.classList.remove("active");
            newMobileMenuToggle.setAttribute("aria-expanded", "false");
          }
          navRight.classList.remove("active");
          navRight.setAttribute("aria-hidden", "true");
          document.body.style.overflow = "";
        });
      });

      // 點擊背景關閉選單
      navRight.addEventListener("click", function (e) {
        if (e.target === navRight && newMobileMenuToggle) {
          newMobileMenuToggle.classList.remove("active");
          newMobileMenuToggle.setAttribute("aria-expanded", "false");
          navRight.classList.remove("active");
          navRight.setAttribute("aria-hidden", "true");
          document.body.style.overflow = "";
          newMobileMenuToggle.focus();
        }
      });

      // ESC 鍵關閉選單
      document.addEventListener("keydown", function (e) {
        if (e.key === "Escape" && navRight.classList.contains("active") && newMobileMenuToggle) {
          newMobileMenuToggle.classList.remove("active");
          newMobileMenuToggle.setAttribute("aria-expanded", "false");
          navRight.classList.remove("active");
          navRight.setAttribute("aria-hidden", "true");
          document.body.style.overflow = "";
          newMobileMenuToggle.focus();
        }
      });
    }
  }

  // 初始化和 Astro 頁面切換時重新初始化
  document.addEventListener("DOMContentLoaded", initMobileMenu);
  document.addEventListener("astro:page-load", initMobileMenu);
</script>
