---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import SeriesArticleNav from "../components/series-article-nav.astro";
import AdRow from "../components/ad-row.astro";
import SocialShare from "../components/SocialShare.astro";
import BackToTop from "../components/BackToTop.astro";
import TableOfContents from "../components/TableOfContents.astro";

import { SITE_TITLE } from "../consts";
const {
  title,
  description,
  date,
  lastmod,
  coverImage,
  tags,
  keywords,
  series,
} = Astro.props;

// Get all possible cover images from the /public/cover/ directory
const fallbackImages = await Astro.glob("/public/cover/**/*.{png,jpg,jpeg,webp}");

let displayImage = coverImage;

if (!displayImage && fallbackImages.length > 0) {
  const randomIndex = Math.floor(Math.random() * fallbackImages.length);
  // For files in `public`, the `src` is the direct web path
  displayImage = fallbackImages[randomIndex].default.src;
}
---

<html lang="zh-tw">
  <head>
    <BaseHead
      title={title + " - " + SITE_TITLE}
      description={description}
      keywords={keywords}
    />
  </head>

  <body>
    <Header />
    <main>
      <article itemscope itemtype="https://schema.org/BlogPosting">
        <div class="wrapper">
          <AdRow />

          <div class="hero-container">
            {displayImage && (
              <img
                width={1200}
                height={600}
                src={displayImage}
                alt={title}
                class="hero-image-bg"
              />
            )}
            <div class="title-overlay">
              <div class="main-title-area">
                <h1 class="article-title" itemprop="headline">
                  {title}
                </h1>
              </div>
              <div class="metadata-area">
                {tags && (
                  <div class="tags">
                    <ul>
                      {tags.map((tag: string) => (
                        <li>
                          <a class="tag" href={`/tags/${tag.toLowerCase()}/`}>
                            {tag.toUpperCase().replace(/-/g, " ")}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
                <div class="date">
                  <FormattedDate date={date} itemprop="datePublished" />
                  {lastmod && (
                    <div class="last-updated-on">
                      Last updated on{" "}
                      <FormattedDate date={lastmod} itemprop="dateModified" />
                    </div>
                  )}
                </div>
              </div>
            </div>
            
          </div>

          <div class="content-wrapper">
            <div class="prose">
              <div class="article-content">
                <slot />
              </div>

              <!-- 社交分享按鈕 -->
              <SocialShare
                title={title}
                url={Astro.url.href}
                description={description}
              />

              <!-- Prev/Next 限系列文 -->
              <SeriesArticleNav series={series} title={title} />
            </div>
            <aside class="sidebar">
              <TableOfContents />
            </aside>
          </div>
        </div>
      </article>
    </main>

    <Footer />
    <BackToTop />
    <style>
      main {
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: white;
      }

      article {
        width: 100%;
      }

      .wrapper {
        width: 1120px;
        max-width: calc(100% - 2em);
        margin: 0 auto;
        padding: 0 1em;
      }

      .content-wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      @media (min-width: 1024px) {
        .content-wrapper {
          grid-template-columns: 3fr 1fr;
        }
      }

      .sidebar {
        /* Add sidebar styles here */
      }

      .hero-container {
        position: relative;
        width: 100%;
        margin: 1em 0;
        border-radius: 8px;
        overflow: hidden;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(45deg, #34495e, #2c3e50);
      }

      .hero-image-bg {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
      }

      .title-overlay {
        position: relative;
        z-index: 2;
        width: 100%;
        background: rgba(0, 0, 0, 0.55);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 2.5em;
        min-height: 300px;
      }

      .main-title-area {
        flex: 3;
      }

      .metadata-area {
        flex: 2;
        text-align: right;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
      }

      .article-title {
        font-size: 2.8em;
        margin: 0;
        line-height: 1.2;
        color: white;
        font-weight: 700;
      }

      .date {
        order: 2;
        margin-top: 1em;
        color: rgba(255, 255, 255, 0.9);
      }

      .last-updated-on {
        font-style: italic;
        font-size: 0.9em;
        margin-top: 0.25em;
      }

      .tags {
        order: 1;
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-end;
        margin: 0;
      }

      .tags ul {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 0;
        justify-content: flex-end;
      }

      .tags li {
        margin-left: 0.5em;
        margin-bottom: 0.5em;
      }

      .tags a {
        display: inline-block;
        padding: 0.3em 0.8em;
        border-radius: 15px;
        background-color: rgba(255, 255, 255, 0.15);
        color: white;
        border: none;
        font-size: 0.75em;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
      }

      .tags a:hover {
        background-color: rgba(255, 255, 255, 0.3);
      }

      .image-attribution {
        position: absolute;
        bottom: 8px;
        right: 12px;
        z-index: 3;
        font-size: 0.7em;
        color: rgba(255, 255, 255, 0.5);
      }
      .image-attribution a {
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
      }
      .image-attribution a:hover {
        text-decoration: underline;
      }

      .article-content {
        font-size: 1.1rem;
        line-height: 1.8;
        letter-spacing: 0.01em;
      }

      .article-content :global(h2) {
        margin-top: 2em;
        margin-bottom: 0.8em;
        font-size: 1.7em;
        border-bottom: 1px solid rgba(var(--gray-light), 0.8);
        padding-bottom: 0.3em;
      }

      .article-content :global(h3) {
        margin-top: 1.5em;
        margin-bottom: 0.6em;
        font-size: 1.4em;
      }

      .article-content :global(p) {
        margin-bottom: 1.5em;
        text-align: justify;
      }

      .article-content :global(ul),
      .article-content :global(ol) {
        padding-left: 1.5em;
        margin-bottom: 1.5em;
      }

      .article-content :global(li) {
        margin-bottom: 0.5em;
      }

      .article-content :global(img) {
        display: block;
        margin: 2em auto;
        max-width: 100%;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .article-content :global(blockquote) {
        background-color: rgba(var(--gray-light), 0.3);
        border-left: 4px solid var(--accent);
        padding: 1em 1.5em;
        margin: 1.5em 0;
        border-radius: 0 8px 8px 0;
      }

      .article-content :global(code) {
        font-family: "Fira Code", monospace;
        font-size: 0.9em;
      }

      .article-content :global(pre) {
        margin: 1.5em 0;
        padding: 1.5em;
        border-radius: 8px;
        overflow-x: auto;
        background-color: #2d2d2d;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      @media (max-width: 768px) {
        .title-overlay {
          flex-direction: column;
          align-items: flex-start;
          justify-content: flex-end;
          padding: 1.5em;
          text-align: left;
        }

        .main-title-area,
        .metadata-area {
          flex: none;
          text-align: left;
          width: 100%;
          align-items: flex-start;
        }

        .article-title {
          font-size: 2.2em;
        }

        .metadata-area {
          margin-top: 1.5em;
        }

        .tags,
        .tags ul {
          justify-content: flex-start;
        }

        .tags li {
          margin-left: 0;
          margin-right: 0.5em;
        }
      }

      /* Series Article Navigation Styling */
      :global(.series-article-nav) {
        margin-top: 2em;
        margin-bottom: 2em;
      }

      :global(.series-article-nav hr) {
        margin: 2em 0;
        border: 0;
        border-top: 1px solid rgba(var(--gray-light), 0.5);
      }

      :global(.series-article-nav a) {
        text-decoration: none;
        color: var(--text-color);
        transition: color 0.2s;
      }

      :global(.series-article-nav a:hover) {
        color: var(--accent);
      }

      :global(.series-article-nav .flex) {
        display: flex;
      }

      :global(.series-article-nav .justify-between) {
        justify-content: space-between;
      }

      :global(.series-article-nav .space-x-10) {
        gap: 2.5rem;
      }

      :global(.series-article-nav .flex-1) {
        flex: 1;
      }

      :global(.series-article-nav .flex-col) {
        flex-direction: column;
      }

      :global(.series-article-nav .items-center) {
        align-items: center;
      }

      :global(.series-article-nav .p-4) {
        padding: 1rem;
      }

      :global(.series-article-nav .bg-gray-100) {
        background-color: rgba(var(--gray-light), 0.2);
      }

      :global(.series-article-nav .rounded-lg) {
        border-radius: 0.5rem;
      }

      :global(.series-article-nav .uppercase) {
        text-transform: uppercase;
      }

      :global(.series-article-nav .text-xs) {
        font-size: 0.75rem;
      }

      :global(.series-article-nav .text-gray-500) {
        color: rgba(var(--gray), 0.8);
      }

      :global(.series-article-nav .text-3xl) {
        font-size: 1.875rem;
      }

      :global(.series-article-nav .text-lg) {
        font-size: 1.125rem;
      }



      :global(.series-article-nav .font-bold) {
        font-weight: 700;
      }

      :global(.series-article-nav .font-medium) {
        font-weight: 500;
      }

      :global(.series-article-nav .mb-3) {
        margin-bottom: 0.75rem;
      }
    </style>
  </body>
</html>
