---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import SeriesArticleNav from "../components/series-article-nav.astro";
import AdRow from "../components/ad-row.astro";
import SocialShare from "../components/SocialShare.astro";
import BackToTop from "../components/BackToTop.astro";
import TableOfContents from "../components/TableOfContents.astro";

import { SITE_TITLE } from "../consts";
const {
  title,
  description,
  date,
  lastmod,
  coverImage,
  tags,
  keywords,
  series,
} = Astro.props;

// Get all possible cover images from the /public/cover/ directory
const fallbackImages = await Astro.glob("/public/cover/**/*.{png,jpg,jpeg,webp}");

let displayImage = coverImage;

if (!displayImage && fallbackImages.length > 0) {
  const randomIndex = Math.floor(Math.random() * fallbackImages.length);
  // For files in `public`, the `src` is the direct web path
  displayImage = fallbackImages[randomIndex].default.src;
}
---

<html lang="zh-tw">
  <head>
    <BaseHead
      title={title + " - " + SITE_TITLE}
      description={description}
      keywords={keywords}
    />
  </head>

  <body>
    <Header />
    <main>
      <article itemscope itemtype="https://schema.org/BlogPosting">
        <div class="wrapper">
          <AdRow />

          <div class="hero-container">
            {displayImage && (
              <img
                src={displayImage}
                alt={title}
                class="hero-image-bg"
              />
            )}
            <div class="title-overlay">
              <h1 class="article-title" itemprop="headline">
                {title}
              </h1>
              <div class="date">
                <FormattedDate date={date} itemprop="datePublished" />
                {lastmod && (
                  <div class="last-updated-on">
                    Last updated on{" "}
                    <FormattedDate date={lastmod} itemprop="dateModified" />
                  </div>
                )}
              </div>
              {tags && (
                <div class="tags">
                  <ul>
                    {tags.slice(0, 5).map((tag: string) => (
                      <li>
                        <a class="tag" href={`/tags/${tag.toLowerCase()}/`}>
                          {tag}
                        </a>
                      </li>
                    ))}
                    {tags.length > 5 && <li class="more-tags">...</li>}
                  </ul>
                </div>
              )}
            </div>
            
          </div>

          <div class="content-wrapper">
            <div class="prose">
              <div class="article-content">
                <slot />
              </div>

              <!-- 社交分享按鈕 -->
              <SocialShare
                title={title}
                url={Astro.url.href}
                description={description}
              />

              <!-- Prev/Next 限系列文 -->
              <SeriesArticleNav series={series} title={title} />
            </div>
            <aside class="sidebar">
              <TableOfContents />
            </aside>
          </div>
        </div>
      </article>
    </main>

    <Footer />
    <BackToTop />
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: var(--color-bg-primary);
        flex: 1;
      }

      article {
        width: 100%;
      }

      .wrapper {
        max-width: var(--container-xl);
        margin: 0 auto;
        padding: 0 var(--spacing-md);
        width: 100%;
        box-sizing: border-box;
      }

      .content-wrapper {
        display: grid;
        grid-template-columns: minmax(0, 1fr);
        gap: var(--spacing-xl);
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
      }

      .prose {
        width: 100%;
        box-sizing: border-box;
      }

      .article-content {
        width: 100%;
        max-width: 100%;
        font-size: var(--font-size-lg);
        line-height: 1.8;
        letter-spacing: 0.01em;
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-word;
        hyphens: auto;
        box-sizing: border-box;
      }

      @media (min-width: 1025px) {
        .content-wrapper {
          grid-template-columns: minmax(0, 3fr) minmax(0, 1fr);
          /* 移除 align-items: start 以修復 sticky 定位 */
        }
        
        .sidebar {
          position: relative;
        }
      }

      .sidebar {
        width: 100%;
        max-width: 100%;
        /* 移除 height: fit-content 限制 */
      }

      .hero-container {
        position: relative;
        width: 100%;
        max-width: 100%;
        margin: var(--spacing-md) 0;
        border-radius: var(--radius-md);
        overflow: hidden;
        color: var(--text-inverse);
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gradient-hero);
        box-sizing: border-box;
      }

      .hero-image-bg {
        width: 100%;
        height: 100%;
        max-width: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
      }

      .title-overlay {
        position: relative;
        z-index: 2;
        width: 100%;
        background: rgba(var(--color-black), 0.5);
        display: flex;
        flex-direction: column; /* Vertical alignment */
        align-items: center; /* Center horizontally */
        justify-content: center; /* Center vertically */
        text-align: center; /* Center text for all children */
        padding: var(--spacing-2xl) var(--spacing-2xl) calc(var(--spacing-xl) + var(--spacing-sm));
        min-height: 280px;
      }

      .article-title {
        font-size: var(--font-size-4xl);
        margin: 0 0 0.4em 0;
        line-height: 1.25;
        color: var(--text-inverse);
        font-weight: var(--font-weight-bold);
      }

      .date {
        font-size: var(--font-size-sm);
        color: rgba(var(--color-white), 0.85);
        margin-bottom: var(--spacing-lg);
      }

      .last-updated-on {
        font-style: italic;
        font-size: 0.9em;
        margin-top: 0.25em;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }

      .tags ul {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 0;
        justify-content: center;
      }

      .tags li {
        margin: 0 var(--spacing-xs) 0.6em; /* Adjust spacing */
      }

      .tags a {
        display: inline-block;
        padding: 0.2em var(--spacing-sm);
        border-radius: var(--radius-sm);
        background-color: transparent; /* Remove background */
        color: rgba(var(--color-white), 0.6); /* Make text less prominent */
        border: none;
        font-size: 0.7em; /* Make font smaller */
        text-decoration: none;
        transition: all var(--transition-normal);
      }

      .tags a:hover {
        color: rgba(var(--color-white), 0.9); /* Brighten on hover */
      }

      .more-tags {
        color: rgba(var(--color-white), 0.6);
        font-size: 0.7em;
        margin: 0 var(--spacing-xs) 0.6em;
        padding: 0.2em var(--spacing-sm);
        display: inline-block;
      }

      .tags a:hover {
        background-color: rgba(var(--color-white), 0.3);
      }

      .image-attribution {
        position: absolute;
        bottom: var(--spacing-sm);
        right: calc(var(--spacing-md) - var(--spacing-xs));
        z-index: 3;
        font-size: 0.7em;
        color: rgba(var(--color-white), 0.5);
      }
      .image-attribution a {
        color: rgba(var(--color-white), 0.6);
        text-decoration: none;
      }
      .image-attribution a:hover {
        text-decoration: underline;
      }

      /* Article content styles moved above */

      .article-content :global(h2) {
        margin-top: 2em;
        margin-bottom: 0.8em;
        font-size: 1.7em;
        border-bottom: 1px solid rgba(var(--gray-light), 0.8);
        padding-bottom: 0.3em;
        word-wrap: break-word;
        overflow-wrap: break-word;
      }

      .article-content :global(h3) {
        margin-top: 1.5em;
        margin-bottom: 0.6em;
        font-size: 1.4em;
        word-wrap: break-word;
        overflow-wrap: break-word;
      }

      .article-content :global(p) {
        margin-bottom: 1.5em;
        text-align: justify;
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-word;
      }

      .article-content :global(ul),
      .article-content :global(ol) {
        padding-left: var(--spacing-lg);
        margin-bottom: var(--spacing-lg);
      }

      .article-content :global(li) {
        margin-bottom: var(--spacing-sm);
      }

      .article-content :global(img) {
        display: block;
        margin: var(--spacing-xl) auto;
        max-width: 100%;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-md);
      }

      .article-content :global(blockquote) {
        background-color: rgba(var(--gray-light), 0.3);
        border-left: 4px solid var(--accent);
        padding: 1em var(--spacing-lg);
        margin: var(--spacing-lg) 0;
        border-radius: 0 var(--radius-md) var(--radius-md) 0;
      }

      .article-content :global(code) {
        font-family: var(--font-family-mono);
        font-size: 0.9em;
        word-wrap: break-word;
        overflow-wrap: break-word;
      }

      .article-content :global(pre) {
        margin: var(--spacing-lg) 0;
        padding: var(--spacing-lg);
        border-radius: var(--radius-md);
        overflow-x: auto;
        background-color: #2d2d2d;
        box-shadow: var(--shadow-sm);
      }

      .article-content :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: var(--spacing-lg) 0;
        table-layout: auto;
      }
      
      .article-content :global(.table-wrapper) {
        overflow-x: auto;
        margin: var(--spacing-lg) 0;
      }

      .article-content :global(th),
      .article-content :global(td) {
        padding: var(--spacing-sm) var(--spacing-md);
        border: 1px solid rgba(var(--gray-light), 0.8);
        text-align: left;
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: normal;
        vertical-align: top;
        min-width: 100px;
      }

      .article-content :global(th) {
        background-color: rgba(var(--gray-light), 0.3);
        font-weight: var(--font-weight-semibold);
      }

      .article-content :global(a) {
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-all;
      }

      @media (max-width: 768px) {
        .wrapper {
          padding: 0 var(--spacing-md);
        }
        
        .article-content :global(table) {
          font-size: 0.9rem;
        }
        
        .article-content :global(th),
        .article-content :global(td) {
          padding: var(--spacing-xs) var(--spacing-sm);
          min-width: 80px;
        }

        .hero-container {
          margin: var(--spacing-sm) 0;
          border-radius: var(--radius-sm);
        }

        .title-overlay {
          padding: 1.2rem 1rem;
          min-height: 200px;
          text-align: left;
          align-items: flex-start;
          justify-content: flex-end;
        }

        .article-title {
          font-size: 1.8em;
          line-height: 1.2;
          margin-bottom: 0.5em;
        }

        .date {
          font-size: 0.8em;
          margin-bottom: 1em;
        }

        .tags {
          justify-content: flex-start;
        }

        .tags ul {
          justify-content: flex-start;
        }

        .tags li {
          margin: 0 0.3em 0.4em 0;
        }

        .tags a {
          font-size: 0.65em;
          padding: 0.15em 0.4em;
        }

        .content-wrapper {
          gap: 1rem;
        }

        .article-content {
          font-size: 1rem;
          line-height: 1.7;
          word-wrap: break-word;
          overflow-wrap: break-word;
        }

        .article-content :global(h2) {
          font-size: 1.5em;
          margin-top: 1.5em;
        }

        .article-content :global(h3) {
          font-size: 1.3em;
          margin-top: 1.2em;
        }

        .article-content :global(p) {
          margin-bottom: 1.2em;
          text-align: left;
          word-wrap: break-word;
          overflow-wrap: break-word;
          word-break: break-word;
        }

        .article-content :global(pre) {
          margin: 1em 0;
          padding: 1em;
          font-size: 0.85em;
        }

        .article-content :global(blockquote) {
          padding: 0.8em 1em;
          margin: 1em 0;
        }

        .article-content :global(ul),
        .article-content :global(ol) {
          padding-left: 1.2em;
        }
      }

      @media (max-width: 480px) {
        .wrapper {
          padding: 0 0.75rem;
        }
        
        .article-content :global(table) {
          font-size: 0.85rem;
        }
        
        .article-content :global(th),
        .article-content :global(td) {
          padding: var(--spacing-xs);
          min-width: 60px;
        }

        .title-overlay {
          padding: 1rem 0.8rem;
          min-height: 180px;
        }

        .article-title {
          font-size: 1.6em;
        }

        .article-content {
          font-size: 0.95rem;
        }

        .article-content :global(h2) {
          font-size: 1.4em;
        }

        .article-content :global(h3) {
          font-size: 1.2em;
        }
      }

      @media (max-width: 414px) {
        .wrapper {
          padding: 0 0.5rem;
        }
        
        .article-content :global(.table-wrapper) {
          margin: var(--spacing-md) -0.5rem;
        }
        
        .article-content :global(table) {
          font-size: 0.8rem;
        }
        
        .article-content :global(th),
        .article-content :global(td) {
          padding: var(--spacing-xs);
          min-width: 50px;
        }

        .hero-container {
          margin: 0.25rem 0;
        }

        .title-overlay {
          padding: 0.8rem 0.6rem;
          min-height: 160px;
        }

        .article-title {
          font-size: 1.5em;
        }
      }

      /* Series Article Navigation Styling */
      :global(.series-article-nav) {
        margin-top: 2em;
        margin-bottom: 2em;
      }

      :global(.series-article-nav hr) {
        margin: 2em 0;
        border: 0;
        border-top: 1px solid rgba(var(--gray-light), 0.5);
      }

      :global(.series-article-nav a) {
        text-decoration: none;
        color: var(--text-color);
        transition: color 0.2s;
      }

      :global(.series-article-nav a:hover) {
        color: var(--accent);
      }

      :global(.series-article-nav .flex) {
        display: flex;
      }

      :global(.series-article-nav .justify-between) {
        justify-content: space-between;
      }

      :global(.series-article-nav .space-x-10) {
        gap: 2.5rem;
      }

      :global(.series-article-nav .flex-1) {
        flex: 1;
      }

      :global(.series-article-nav .flex-col) {
        flex-direction: column;
      }

      :global(.series-article-nav .items-center) {
        align-items: center;
      }

      :global(.series-article-nav .p-4) {
        padding: 1rem;
      }

      :global(.series-article-nav .bg-gray-100) {
        background-color: rgba(var(--gray-light), 0.2);
      }

      :global(.series-article-nav .rounded-lg) {
        border-radius: 0.5rem;
      }

      :global(.series-article-nav .uppercase) {
        text-transform: uppercase;
      }

      :global(.series-article-nav .text-xs) {
        font-size: 0.75rem;
      }

      :global(.series-article-nav .text-gray-500) {
        color: rgba(var(--gray), 0.8);
      }

      :global(.series-article-nav .text-3xl) {
        font-size: 1.875rem;
      }

      :global(.series-article-nav .text-lg) {
        font-size: 1.125rem;
      }



      :global(.series-article-nav .font-bold) {
        font-weight: 700;
      }

      :global(.series-article-nav .font-medium) {
        font-weight: 500;
      }

      :global(.series-article-nav .mb-3) {
        margin-bottom: 0.75rem;
      }

      @media (max-width: 768px) {
        :global(.series-article-nav .flex) {
          flex-direction: column;
        }

        :global(.series-article-nav .justify-between) {
          justify-content: flex-start;
        }

        :global(.series-article-nav .space-x-10) {
          gap: 1rem;
        }

        :global(.series-article-nav .text-3xl) {
          font-size: 1.5rem;
        }

        :global(.series-article-nav .text-lg) {
          font-size: 1rem;
        }

        :global(.series-article-nav .p-4) {
          padding: 0.75rem;
        }
      }
    </style>
  </body>
</html>
