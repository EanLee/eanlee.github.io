      function setupCodeCopy() {
        const preElements = document.querySelectorAll(".article-content pre");

        preElements.forEach((pre) => {
          // ç‚º ::after å½å…ƒç´ æ·»åŠ é»æ“Šäº‹ä»¶
          // ç”±æ–¼å½å…ƒç´ ç„¡æ³•ç›´æ¥ç¶å®šäº‹ä»¶ï¼Œæˆ‘å€‘åµè½ pre å…ƒç´ çš„é»æ“Š
          pre.addEventListener("click", (e) => {
            // æª¢æŸ¥é»æ“Šæ˜¯å¦åœ¨å³ä¸Šè§’ï¼ˆCOPY æŒ‰éˆ•å€åŸŸï¼‰
            const rect = pre.getBoundingClientRect();
            const clickX = e.clientX - rect.left;
            const clickY = e.clientY - rect.top;

            // COPY æŒ‰éˆ•å€åŸŸåˆ¤å®šï¼ˆå³ä¸Šè§’ï¼Œç´„ 50px å¯¬ï¼Œ25px é«˜ï¼‰
            const topBarHeight = 25; // ::after çš„é«˜åº¦
            const buttonWidth = 50; // æŒ‰éˆ•å¯¬åº¦

            if (clickY < topBarHeight && clickX > rect.width - buttonWidth) {
              e.preventDefault();
              copyCode(pre);
            }
          });
        });
      }

      // è¤‡è£½ä»£ç¢¼å…§å®¹
      async function copyCode(pre) {
        try {
          const code = pre.querySelector("code");
          if (!code) return;

          // å–å¾—ä»£ç¢¼æ–‡æœ¬
          const text = code.textContent || "";

          // è¤‡è£½åˆ°å‰ªè²¼æ¿
          await navigator.clipboard.writeText(text);

          // é¡¯ç¤ºåé¥‹
          showCopyFeedback(pre);
        } catch (error) {
          console.error("è¤‡è£½å¤±æ•—:", error);
        }
      }

      // é¡¯ç¤ºè¤‡è£½æˆåŠŸåé¥‹
      function showCopyFeedback(pre) {
        // æ·»åŠ  copied é¡åˆ¥ä»¥æ”¹è®Šæ¨£å¼
        pre.classList.add("copied");

        // 3 ç§’å¾Œç§»é™¤åé¥‹
        setTimeout(() => {
          pre.classList.remove("copied");
        }, 3000);
      }

      // DOMContentLoaded ä¸” CodeCopy åˆå§‹åŒ–å¾ŒåŸ·è¡Œ
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => {
          setTimeout(setupCodeCopy, 100);
        });
      } else {
        setTimeout(setupCodeCopy, 100);
      }
    </script>
