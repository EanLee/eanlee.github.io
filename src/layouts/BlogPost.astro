import Giscus from "../components/Giscus.astro";
import RelatedPosts from "../components/RelatedPosts.astro";
import { Image } from 'astro:assets';

import { SITE_TITLE } from "../consts";
const { title, description, date, lastmod, coverImage, tags, keywords, series, categories, epic, entry } = Astro.props;

// é è¼‰å…¥å…±ç”¨å°é¢åœ–ç‰‡ (fallback)
const coverModules = import.meta.glob("/src/assets/images/cover/*.{webp,png,jpg,jpeg}", { eager: true });
const availableCovers = Object.values(coverModules) as any[];

// å®‰å…¨åœ°æå–å…±ç”¨å°é¢çš„ src
const getAvailableCoverSrcs = () => {
  return availableCovers
    .map((cover) => {
      // æª¢æŸ¥å¤šç¨®å¯èƒ½çš„çµæ§‹
      if (cover?.default?.src && typeof cover.default.src === "string") {
        return cover.default.src;
      }
      if (typeof cover?.src === "string") {
        return cover.src;
      }
      if (typeof cover?.default === "string") {
        return cover.default;
      }
      return null;
    })
    .filter((src) => src !== null) as string[];
};

let displayImage = coverImage;

// å¦‚æœæ²’æœ‰æŒ‡å®š coverImageï¼Œä½¿ç”¨å…±ç”¨ cover ä½œç‚º fallbackï¼ˆè¿”å›åœ–ç‰‡å°è±¡ï¼‰
if (!displayImage && availableCovers.length > 0) {
  const randomIndex = Math.floor(Math.random() * availableCovers.length);
  const randomCover = availableCovers[randomIndex] as any;
  displayImage = randomCover?.default || null;
}

// è¨ˆç®—å­—æ•¸ï¼ˆä¸­è‹±æ–‡æ··åˆï¼‰
const wordCount = entry?.body ? entry.body.split(/\s+/).length : 0;

// æº–å‚™ JSON-LD çµæ§‹åŒ–è³‡æ–™
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: title,
  description: description || title,
  image: displayImage ? new URL(displayImage, Astro.site).href : undefined,
  datePublished: date.toISOString(),
  dateModified: lastmod ? lastmod.toISOString() : date.toISOString(),
  author: {
    "@type": "Person",
    name: "Ean Lee",
    url: "https://eandev.com",
  },
  publisher: {
    "@type": "Organization",
    name: "ä¼Šæ©çš„é–‹ç™¼ç‹‚æƒ³",
    logo: {
      "@type": "ImageObject",
      url: new URL("/favicon.svg", Astro.site).href,
    },
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": Astro.url.href,
  },
  keywords: keywords?.join(", ") || tags?.join(", "),
  articleSection: categories?.join(", ") || tags?.[0],
  wordCount: wordCount,
  inLanguage: "zh-TW",
};

// æ–‡ç« æ–°é®®åº¦è­¦ç¤ºï¼šä»¥ lastmodï¼ˆè‹¥æœ‰ï¼‰æˆ– date åˆ¤æ–·ï¼Œè¶…é 2 å¹´é¡¯ç¤ºæç¤º
const TWO_YEARS_MS = 730 * 24 * 60 * 60 * 1000;
const freshnessDate = (lastmod instanceof Date ? lastmod : null) ?? (date instanceof Date ? date : null);
const isStale = freshnessDate !== null && Date.now() - freshnessDate.getTime() > TWO_YEARS_MS;
const staleYear = date instanceof Date ? date.getFullYear() : 0;
