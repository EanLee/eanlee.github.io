---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import SeriesArticleNav from "../components/series-article-nav.astro";
import AdRow from "../components/ad-row.astro";
import SocialShare from "../components/SocialShare.astro";
import BackToTop from "../components/BackToTop.astro";
import TableOfContents from "../components/TableOfContents.astro";

import { SITE_TITLE } from "../consts";
const {
  title,
  description,
  date,
  lastmod,
  coverImage,
  tags,
  keywords,
  series,
} = Astro.props;
---

<html lang="zh-tw">
  <head>
    <BaseHead title={title + " - " + SITE_TITLE} description={description} keywords={keywords} />
  </head>

  <body>
    <Header />
    <main>
      <article 
        itemscope
        itemtype="https://schema.org/BlogPosting"
      >
        <div class="article-wrapper">
          <AdRow />

          <div class="hero-image">
            {
              coverImage && (
                <img width={1020} height={510} src={coverImage} alt={title} />
              )
            }
          </div>
          <div class="prose-content">
            <div class="title">
              {
                tags && (
                  <div class="tags">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tag"
                      width="16"
                      height="16"
                      viewBox="0 0 32 32"
                      stroke-width="1.5"
                      stroke="#2c3e50"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M32 19c0 1-1 2-1 2L21 31s-1 1-2 1-2-1-2-1L2 16c-1-1-1.4-2-1.4-2S0 12.5 0 11V3C0 1.5.8.8.8.8S1.5 0 3 0h8c1.5 0 3 .6 3 .6S15 1 16 2l15 15s1 1 1 2zM7 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg>
                    <ul>
                      {tags.map((tag: string) => (
                        <li>
                          <a class="tag" href={`/tags/${tag.toLowerCase()}/`}>
                            {tag.toUpperCase().replace(/-/g, " ")}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                )
              }
              <h1 class="article-title" itemprop="headline">{title}</h1>
              <div class="date">
                <FormattedDate date={date} itemprop="datePublished" />
                {
                  lastmod && (
                    <div class="last-updated-on">
                      Last updated on{" "}
                      <FormattedDate date={lastmod} itemprop="dateModified" />
                    </div>
                  )
                }
              </div>
              <hr />
            </div>
            
            <div class="article-content">
              <slot />
            </div>

            <!-- 社交分享按鈕 -->
            <SocialShare 
              title={title} 
              url={Astro.url.href} 
              description={description} 
            />

            <!-- Prev/Next 限系列文 -->
            <SeriesArticleNav series={series} title={title} />
          </div>
          <TableOfContents />
        </div>
      </article>
    </main>

    <Footer />
    <BackToTop />
    <style>
      main {
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: white;
      }

      article {
        width: 100%;
      }

      .article-wrapper {
        width: 1120px;
        max-width: calc(100% - 2em);
        margin: 0 auto;
        padding: 0 1em;
      }

      .hero-image {
        width: 100%;
        margin: 1em 0;
      }

      .hero-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 8px;
      }

      .article-content {
        font-size: 1.1rem;
        line-height: 1.8;
        letter-spacing: 0.01em;
      }

      .article-content :global(h2) {
        margin-top: 2em;
        margin-bottom: 0.8em;
        font-size: 1.7em;
        border-bottom: 1px solid rgba(var(--gray-light), 0.8);
        padding-bottom: 0.3em;
      }

      .article-content :global(h3) {
        margin-top: 1.5em;
        margin-bottom: 0.6em;
        font-size: 1.4em;
      }

      .article-content :global(p) {
        margin-bottom: 1.5em;
        text-align: justify;
      }

      .article-content :global(ul), .article-content :global(ol) {
        padding-left: 1.5em;
        margin-bottom: 1.5em;
      }

      .article-content :global(li) {
        margin-bottom: 0.5em;
      }

      .article-content :global(img) {
        display: block;
        margin: 2em auto;
        max-width: 100%;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .article-content :global(blockquote) {
        background-color: rgba(var(--gray-light), 0.3);
        border-left: 4px solid var(--accent);
        padding: 1em 1.5em;
        margin: 1.5em 0;
        border-radius: 0 8px 8px 0;
      }

      .article-content :global(code) {
        font-family: 'Fira Code', monospace;
        font-size: 0.9em;
      }

      .article-content :global(pre) {
        margin: 1.5em 0;
        padding: 1.5em;
        border-radius: 8px;
        overflow-x: auto;
        background-color: #2d2d2d;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      @media (max-width: 768px) {
        main {
          width: 100%;
          margin: auto;
          padding: 0;
        }

        .article-wrapper {
          width: 100%;
          padding: 1em;
        }

        .article-title {
          font-size: 2em;
        }
      }

      .title {
        margin-bottom: 1em;
      }

      .title h1 {
        margin: 0 0 0.5em 0;
      }

      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }

      .last-updated-on {
        font-style: italic;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        margin: 0 0 1em 0;
      }

      .tags .icon-tag {
        width: 1.25em;
        height: 1.25em;
        margin-right: 0.5em;
        fill: var(--accent);
      }

      .tags ul {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .tags li {
        margin-right: 0.5em;
        margin-bottom: 0.5em;
      }

      .tags a {
        display: inline-block;
        padding: 0.2em 0.6em;
        border-radius: 4px;
        background-color: rgba(var(--accent-light), 0.2);
        color: var(--accent);
        font-size: 0.8em;
        text-decoration: none;
        transition: background-color 0.2s;
      }

      .tags a:hover {
        background-color: rgba(var(--accent-light), 0.4);
      }
    </style>
  </body>
</html>
