---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import SeriesArticleNav from "../components/series-article-nav.astro";
import AdRow from "../components/ad-row.astro";

import { SITE_TITLE } from "../consts";
const {
  title,
  description,
  date,
  lastmod,
  coverImage,
  tags,
  keywords,
  series,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title + " - " + SITE_TITLE} description={description} />
    <meta name="keywords" content={keywords?.join(", ")} />
  </head>

  <body>
    <Header />
    <main>
      <article class="prose lg:prose-xl md:prose-sm"
               itemscope
               itemtype="https://schema.org/BlogPosting">

        <AdRow />

        <div class="hero-image">
          {
            coverImage && (
              <img width={1020} height={510} src={coverImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            {
              tags && (
                <div class="tags">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tag"
                    width="16"
                    height="16"
                    viewBox="0 0 32 32"
                    stroke-width="1.5"
                    stroke="#2c3e50"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M32 19c0 1-1 2-1 2L21 31s-1 1-2 1-2-1-2-1L2 16c-1-1-1.4-2-1.4-2S0 12.5 0 11V3C0 1.5.8.8.8.8S1.5 0 3 0h8c1.5 0 3 .6 3 .6S15 1 16 2l15 15s1 1 1 2zM7 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                  </svg>
                  <ul>
                    {tags.map((tag: string) => (
                      <li>
                        <a class="tag" href={`/tags/${tag.toLowerCase()}/`}>
                          {tag.toUpperCase().replace(/-/g, " ")}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )
            }
            <h1 itemprop="headline">{title}</h1>
            <div class="date">
              <FormattedDate date={date} itemprop="datePublished" />
              {
                lastmod && (
                  <div class="last-updated-on">
                    Last updated on{" "}
                    <FormattedDate date={lastmod} itemprop="dateModified" />
                  </div>
                )
              }
            </div>
            <hr />
          </div>
          <slot />

          <!-- Prev/Next 限系列文 -->
          <SeriesArticleNav series={series} title={title} />

        </div>

        <AdRow />
      </article>
    </main>

    <Footer />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }

      .prose {
        width: 1120px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }

      h1 {
        font-weight: 700;
      }

      @media (max-width: 768px) {
        main {
          width: 100%;
          margin: auto;
          padding: 0;
        }

        .prose {
          width: 100%;
          max-width: calc(100% - 2em);
          margin: auto;
          padding: 0;

          font-size: 0.9rem;
        }

        h1 {
          font-size: 1.5rem;
        }
      }

      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }

      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }

      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      .tags {
        display: flex;
        align-items: center;
        margin-bottom: 0.5em;
      }

      .tags svg {
        margin-right: 0.5em;
      }
      .tags a {
        margin-right: 0.5em;
      }
      .tags a:last-child {
        margin-right: 0;
      }

      .tags ul {
        display: flex;
        flex-wrap: wrap;
        margin: 0;
        padding: 0;
        list-style: none;
      }

      .tag {
        background: #eee;
        border-radius: 5px;
        color: #999;
        display: inline-block;
        padding: 2px 0.7rem;
        position: relative;
        margin: 0 5px;
        text-decoration: none;
        text-transform: uppercase;
        -webkit-transition: color 0.2s;
        font-size: medium;
      }

      .tag:hover {
        background-color: crimson;
        color: white;
      }

      .tag:hover::after {
        border-left-color: crimson;
      }


    </style>
  </body>
</html>
